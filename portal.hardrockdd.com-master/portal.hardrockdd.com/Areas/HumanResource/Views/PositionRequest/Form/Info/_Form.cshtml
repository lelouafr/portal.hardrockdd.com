@model portal.Areas.HumanResource.Models.PositionRequest.RequestViewModel
@{
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var formLayout = new TableLayoutModel(this);
    var entityKey = formLayout.TableKey;
    var formId = string.Format("form_{0}", Guid.NewGuid());
}
<form class="form-horizontal"
      id="@formId"
      data-entitykey="@entityKey"
      data-urlupdate="@Url.Action("Update", "PositionRequest")"
      data-urlvalidate="@Url.Action("Validate", "PositionRequest")">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PRCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.HRCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.RequestId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.Comments, new { @id = Guid.NewGuid() })

    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.RequestedOn, new { ViewOnly = true })
        @Html.EditorFor(m => m.RequestedBy, new { ViewOnly = true })
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.PositionCodeId)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.ForCrewId)
        @Html.EditorFor(m => m.PriorEmployeeId)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.Comments, new { ViewOnly = true })
    </div>
</form>
<script>
    $('#@formId').ready(function () { Form().init($('#@formId')); });
</script>