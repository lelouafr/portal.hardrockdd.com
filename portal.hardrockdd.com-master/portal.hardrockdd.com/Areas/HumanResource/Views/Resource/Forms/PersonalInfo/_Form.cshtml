@model portal.Areas.HumanResource.Models.Resource.Form.PersonalInfoViewModel
@{
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var formLayout = new TableLayoutModel(this);
    var entityKey = formLayout.TableKey;
    var formId = string.Format("form_{0}", Guid.NewGuid());
}

<form class="form-horizontal"
      id="@formId"
      data-entitykey="@entityKey"
      data-urlupdate="@Url.Action("PersonalInfoUpdate", "Resource")"
      data-urlvalidate="@Url.Action("PersonalInfoValidate", "Resource")">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PRCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.EmployeeId, new { @id = Guid.NewGuid() })

    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.Phone)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.Email)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.BirthDate)
    </div>
</form>
<script>
    $('#@formId').ready(function () { Form().init($('#@formId')); });
</script>