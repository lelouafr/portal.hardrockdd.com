@model portal.Areas.HumanResource.Models.Resource.Form.ADInfoViewModel
@{
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var formLayout = new TableLayoutModel(this);
    var entityKey = formLayout.TableKey;
    var formId = string.Format("form_{0}", Guid.NewGuid());
}

<form class="form-horizontal"
      autocomplete="off"
      id="@formId"
      data-entitykey="@entityKey"
      data-urlupdate="@Url.Action("ADInfoUpdate", "Resource")"
      data-urlvalidate="@Url.Action("ADInfoValidate", "Resource")">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.HRCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.EmployeeId, new { @id = Guid.NewGuid() })

    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.IsDomainAccount)
        @Html.EditorFor(m => m.IsAccountActive)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.HasEmail)
        @Html.EditorFor(m => m.PortalActive)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.CompanyEmail)
        @if (Model.CanChangePassword)
        {
            @Html.EditorFor(m => m.ADPassword)
        }
    </div>
</form>
<script>
    $('#@formId').ready(function () { Form().init($('#@formId')); });
</script>