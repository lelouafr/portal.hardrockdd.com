@model portal.Areas.HumanResource.Models.Resource.Form.AssignmentViewModel
@{
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var formLayout = new TableLayoutModel(this);
    var entityKey = formLayout.TableKey;
    var formId = string.Format("form_{0}", Guid.NewGuid());
}

<form class="form-horizontal"
      id="@formId"
      data-entitykey="@entityKey"
      data-urlupdate="@Url.Action("AssignmentUpdate", "Resource")"
      data-urlvalidate="@Url.Action("AssignmentValidate", "Resource")">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PRCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.JCCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.HRCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.EmployeeId, new { @id = Guid.NewGuid() })

    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.PositionId)
        @Html.EditorFor(m => m.SupervisorId)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.CrewId)
        @Html.EditorFor(m => m.JobId)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.DivisionId)
        @Html.EditorFor(m => m.OfficeId)
    </div>
</form>
<script>
    $('#@formId').ready(function () { Form().init($('#@formId')); });
</script>