@model  portal.Areas.HumanResource.Models.Resource.Form.EmploymentHistoryListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var tableLayout = new TableLayoutModel(this);
    string tableKey = tableLayout.TableKey;
}

<table class="table"
       id="@tableId"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th width="10%">@Html.LabelForRequired(model => model.List.FirstOrDefault().SeqId)</th>
            <th width="25%">@Html.LabelForRequired(model => model.List.FirstOrDefault().DateChanged)</th>
            <th width="30%">@Html.LabelForRequired(model => model.List.FirstOrDefault().Type)</th>
            <th width="30%">@Html.LabelForRequired(model => model.List.FirstOrDefault().HistoryCode)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model.List)
        {
            @Html.Partial("Forms/History/List/_TableRow", request)
        }
    </tbody>
</table>
<script>
    Table().init('#@tableId');
</script>