        // Step show event
        $(wizardElem).on("showStep", function (e, anchorObject, stepNumber, stepDirection, stepPosition) {
            $(".sw-btn-finish").hide();
            $(".sw-btn-next").show();
            $(".sw-btn-prev").removeClass('disabled');
            $(".sw-btn-next").removeClass('disabled');
            if (stepPosition === 'first') {
                $(".sw-btn-prev").addClass('disabled');
            } else if (stepPosition === 'last') {
                $(".sw-btn-next").hide();
                $(".sw-btn-finish").show();
                $(".sw-btn-next").addClass('disabled');
            } else {
                $(".sw-btn-prev").removeClass('disabled');
                $(".sw-btn-next").removeClass('disabled');
            }
        });

        $(wizardElem).on("stepContent", function (e, anchorObject, currentStepIndex, stepDirection) {
            var ajaxURL = anchorObject.data('url');
            var isLoaded = anchorObject.data('isloaded') === "true";
            //console.log('Step Loaded', currentStepIndex, stepDirection, isLoaded);

            //console.log("isLoaded: ", isLoaded);
            if ((stepDirection != "forward" && stepDirection != "" && isLoaded) || isLoaded) {
                return;
            }
            //console.log($(".sw-btn-next"));
            $(".sw-btn-next").addClass('disabled');
            // Return a promise object
            return new Promise((resolve, reject) => {
                $.ajax({
                    method: "GET",
                    url: ajaxURL,
                    beforeSend: function (xhr) {
                        $(wizardElem).smartWizard("loader", "show");
                        var isAbsoluteURI = new RegExp('^(?:[a-z]+:)?//', 'i');
                        if (!isAbsoluteURI.test(this.url)) {
                            var controllerToken = $(document).find('#controllerTokenId')[0];
                            xhr.setRequestHeader('ControllerTokenId', $(controllerToken).val());
                        }
                    }
                }).done(function (res, status, xhr) {
                    resolve(res);
                    //console.log(status, xhr, xhr.getResponseHeader("errorId"));

                    var errorId = xhr.getResponseHeader("errorId");
                    if (errorId == null) {
                        $(anchorObject).data('isloaded', "true");
                    }
                    $(wizardElem).smartWizard("loader", "hide");
                    $(".sw-btn-next").removeClass('disabled');
                }).fail(function (err) {
                    reject("An error loading the resource");
                    $(wizardElem).smartWizard("loader", "hide");
                    $(".sw-btn-next").removeClass('disabled');
                });
            });
        });

        $(wizardElem).on('leaveStep', function (e, anchorObject, currentStepIndex, nextStepIndex, stepDirection) {
            //console.log('next clicked', currentStepIndex, nextStepIndex, stepDirection);
            if (stepDirection == 'forward') {
                var validate = $(anchorObject).data('validate');
                var isValid = $(anchorObject).attr('data-isvalid') == 'true';
                if (validate && !isValid) {
                    var tabId = $(anchorObject).attr('href')
                    var tab = $(tabId);
                    var nextStep = nextStepIndex;//+ 1;
                    var button = $(".sw-btn-next")[0];
                    $(tab).PostValidate(button, function (tabIsValid) {
                        //console.log('tab is valid:', tabIsValid);
                        $(anchorObject).attr('data-isvalid', tabIsValid);
                        if (tabIsValid) {
                            var currentStep = $(wizardElem).attr('data-currentstep');
                            if (currentStep != nextStep) {
                                //console.log('Go Next Step');
                                $(wizardElem).attr('data-currentstep', nextStep);
                                $(wizardElem).smartWizard("goToStep", nextStep);
                                $(wizardElem).smartWizard("loader", "hide");
                               // $(anchorObject).attr('data-isvalid', 'false');
                            }
                        }
                        return tabIsValid;
                    });
                    return isValid;

                }
                return true;
            }
        });

        // Smart Wizard
        $(wizardElem).smartWizard({
            selected: 0,
            theme: 'arrows',
            useURLhash: false,
            showStepURLhash: false,
            enableURLhash: false,
            keyNavigation: false,
            autoAdjustHeight: false,
            keyboardSettings: {
                keyNavigation: false
            },
            anchorSettings: {
                anchorClickable: true, // Enable/Disable anchor navigation
                enableAllAnchors: true, // Activates all anchors clickable all times
                markDoneStep: true, // Add done state on navigation
                markAllPreviousStepsAsDone: true, // When a step selected by url hash, all previous steps are marked done
                removeDoneStepOnNavigateBack: false, // While navigate back done step after active step will be cleared
                enableAnchorOnDoneStep: true // Enable/Disable the done steps navigation
            },
            //transition: {
            //    animation: 'slide-vertical', // Effect on navigation, none/fade/slide-horizontal/slide-vertical/slide-swing
