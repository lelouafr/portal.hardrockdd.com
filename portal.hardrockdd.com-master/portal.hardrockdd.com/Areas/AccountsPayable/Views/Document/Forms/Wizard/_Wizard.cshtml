@model portal.Areas.AccountsPayable.Models.Document.WizardFormViewModel

@{
    var wizardId = "wizard_" + Guid.NewGuid();
    var formLayout = new TableLayoutModel(this);
}
<style>
    .sw {
        background-color: white;
    }

    .sw-theme-arrows > .nav .nav-link {
        color: #999;
        border-color: #f8f8f8;
        background: #f8f8f8;
    }
</style>

<div id="@wizardId">
    <ul class="nav">
        @foreach (var item in Model.WizardSteps)
        {
            <li>
                <a class="nav-link" id="href_@(wizardId)_@(item.StepId)" href="#step_@(wizardId)_@(item.StepId)" data-validate="true" data-isloaded="false" data-url="@item.AjaxUrl">
                    <span class="number">@item.StepId</span>
                    <span class="info text-ellipsis">
                        @item.Title
                    </span>
                </a>
            </li>
        }
    </ul>
    <div class="tab-content" style="padding: 0px; margin-bottom: 0px; overflow:unset;">
        @foreach (var item in Model.WizardSteps)
        {
            <div id="step_@(wizardId)_@(item.StepId)" class="tab-pane" role="tabpanel" style="padding: 0px;" data-validate="true">
            </div>
        }
    </div>
</div>

<script>
    var ajaxInvoke = false;
    $('#@wizardId').ready(function () {
        var wizardElem = $('#@wizardId');
        initWizard(wizardElem);
        handleInputChange(wizardElem);
    });
    function handleInputChange(wizardElem) {
        $(wizardElem)
            .off('change', ':Input')
            .on('change', ':Input', function () {
                //set reset any validation test
                var currentStep = $(wizardElem).smartWizard("getStepIndex");
                var anchorObjectId = 'href_@(wizardId)_' + (currentStep + 1);
                var anchorObject = $('#' + anchorObjectId);

                $(wizardElem).find('[data-isloaded]').each(function () {
                    $(this).data('isvalid', "false");
                    if (anchorObjectId != $(this).attr('id')) {
                        $(this).data('isloaded', "false");
                    }
                });
            });
    }

