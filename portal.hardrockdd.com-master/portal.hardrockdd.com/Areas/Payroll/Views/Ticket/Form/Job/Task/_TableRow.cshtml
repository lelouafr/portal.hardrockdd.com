@model portal.Areas.Payroll.Models.Ticket.Job.JobPhaseCostViewModel
@{
    var tableLayout = new TableLayoutModel(this);
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var entityKey = tableLayout.TableKey;
}
<tr data-entitykey="@entityKey">
    <td style="border-top-width: 0px; padding-top:0px; border-right: 1px;">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.DTCo, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.TicketId, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.TaskId, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.LineId, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.PhaseId, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.PhaseGroupId, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.CostTypeId, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.PhaseDescription, new { @id = Guid.NewGuid() })
        @Html.EditorFor(m => m.Radius, new { ViewOnly = false })
    </td>
    <td style="border-top-width: 0px; padding-top:0px;">
        @Html.EditorFor(m => m.Value, new { ViewOnly = (viewOnly ? !(Model.CostTypeId == 34) : viewOnly) })
    </td>
    <td style="border-top-width: 0px; padding-top:0px;">
        @Html.EditorFor(m => m.UnitofMeasure, new { DisplayOnly = true })
    </td>
    @if (!viewOnly)
    {
        <td style="border-top-width: 0px; padding-top:0px;"></td>
    }
</tr>