
@model portal.Areas.Payroll.Models.Crew.CrewListViewModel

@{
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var tableLayout = new TableLayoutModel(this);
    string tableKey = tableLayout.TableKey;
}
<table class="table pageResize"
       id="@tableId"
       data-reloadurl="@Url.Action("CrewTable", "Crew")"
       data-dataurl="@Url.Action("CrewData", "Crew")"
       data-urlselect="@Url.Action("CrewPanel", "Crew")"
       data-dstselect="reviewPanel"
       data-dstselectvalidate="false"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().CrewId)</th>
            <th data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().Description)</th>
            <th data-datatable-filter-type="select">@Html.LabelForRequired(model => model.List.FirstOrDefault().CrewType)</th>
            <th data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().CrewLeaderId)</th>
            <th data-datatable-filter-type="select">@Html.LabelForRequired(model => model.List.FirstOrDefault().JobId)</th>
            <th data-datatable-filter-type="select">@Html.LabelForRequired(model => model.List.FirstOrDefault().Status)</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
    $('#@tableId').ready(function () {
        var table = $('#@tableId');
        $('#@tableId').DataTable({
            autoWidth: false,
            lengthChange: false,
            paging: false,
            ordering: true,
            processing: true,
            scrollY: 250,
            language: {
                loadingRecords: 'Loading....',
                processing: '<span class="spinner-small"></span>'
            },
            ajax: {
                url: $('#@tableId').data('dataurl'),
                data: function (d) {
                },
                type: "GET",
                datatype: "json",
            },
            order: [
                [0, "asc"]
            ],
            columns: [
                { data: "CrewId" },
                { data: "Description" },
                { data: "CrewType" },
                { data: "CrewLeaderName" },
                { data: "JobName" },
                { data: "ActiveYN" },
            ],
            columnDefs: [
                
                
            ],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
            createdRow: function (row, data, dataIndex) {
                var rowKey = "PRCo=" + data.PRCo + "&CrewId=" + data.CrewId;
                $(row).attr('data-entitykey', rowKey);
            }
        });
    })
</script>