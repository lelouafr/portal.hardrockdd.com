@model portal.Areas.Project.Models.Bid.Package.ProductionRateViewModel
@{
    var tableLayout = new TableLayoutModel(this);
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var entityKey = tableLayout.TableKey;
}
<tr data-entitykey="@entityKey">
    <td>
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.BDCo, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.BidId, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.PackageId, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.PassId, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.PhaseGroupId, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.PhaseId, new { @id = Guid.NewGuid() })
        @Html.EditorFor(m => m.PhaseDescription, new { DisplayOnly = true })
    </td>
    <td>
        @Html.EditorFor(m => m.BoreSize)
    </td>
    <td>
        @Html.EditorFor(m => m.CalcType)
    </td>
    <td>
        @Html.EditorFor(m => m.DirtProductionValue)
    </td>
    <td style="@(ViewBag.ShowSoft ? "" : "display:none")">
        @Html.EditorFor(m => m.SoftRockProductionValue)
    </td>
    <td style="@(ViewBag.ShowMedium ? "" : "display:none")">
        @Html.EditorFor(m => m.MediumRockProductionValue)
    </td>
    <td style="@(ViewBag.ShowHard ? "" : "display:none")">
        @Html.EditorFor(m => m.HardRockProductionValue)
    </td>
    <td style="@(ViewBag.ShowVeryHard ? "" : "display:none")">
        @Html.EditorFor(m => m.VeryHardRockProductionValue)
    </td>
</tr>
