@model portal.Areas.Project.Models.Locate.RequestListViewModel

@{
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var tableLayout = new TableLayoutModel(this);
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = tableLayout.TableKey;
    ViewBag.TableRow = "True";
}

@Html.AntiForgeryToken()
<table class="table "
       id="@tableId"
       data-urlselect="@Url.Action("RequestPanel", "Locate")"
       data-urldata="@Url.Action(ViewBag.DataAction, "Locate")"
       data-dstselect="reviewPanel"
       data-dstselectvalidate="false"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th width="50px" data-datatable-filter-type="none">@Html.LabelForRequired(model => model.List.FirstOrDefault().RequestId)</th>
            <th width="250px"  data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().Description)</th>
            <th width="100px"  data-datatable-filter-type="select">@Html.LabelForRequired(model => model.List.FirstOrDefault().Owner)</th>
            <th width="100px"  data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().AnticipatedStartDate)</th>
            <th width="150px"  data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().BidId)</th>
            <th width="100px"  data-datatable-filter-type="select">@Html.LabelForRequired(model => model.List.FirstOrDefault().RequestedBy)</th>
            <th width="35px" >
                <button class="btn btn-sm btn-success pull-right" data-toggle="modal" data-target="#newLocateRequest">
                    <i class='fas fa-plus'></i>
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
    $('#@tableId').ready(function () {
        var panel = $("#@tableId").closest('.panel').first();
        var itemCnt = @(Model.List.Count());
        h = tableHeight($('#@tableId'), itemCnt, 42.4) - 50;
        var table = $('#@tableId').DataTable({
            paging: false,
            ordering: true,
            processing: true,
            scrollCollapse: true,
            scrollY: 250,
            scrollX: true,
            language: {
                loadingRecords: 'Loading....',
                processing: '<span class="spinner-small"></span>'
            },
            ajax: {
                url: $('#@tableId').data('urldata'),
                data: function (d) {
                },
                type: "GET",
                datatype: "json",
            },
            columns: [
                { data: "RequestId" },
                { data: "Description" },
                { data: "Owner" },
                {
                    data: "AnticipatedStartDate",
                    render: function (data, type) {
                        //console.log(type, data);
                        if (data == null)
                            return '';
                        return type === 'sort' ? moment(data).format("YYYY-MM-DD") : moment(data).format('L');
                    }
                },
                { data: "BidId" },
                { data: "RequestedName" },
                {
                    data: "Owner"
                },
            ],
            columnDefs: [
                { targets: [0], visible: false },
                {
                    targets: [6],
                    sortable: false,
                    createdCell: function (cell, cellData, rowData, rowIndex, colIndex) {
                        console.log("Data:", rowData);
                        var entityKey = "RequestId=" + rowData.RequestId;
                        $(cell).html('<button class="btn btn-xs btn-danger pull-right delRow" data-entitykey="' + entityKey + '"><i class="fa fa-trash"></i></button>');
                    }
                },
            ],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
                $('#@(tableId)_filter').hide();
            },
            createdRow: function (row, data, dataIndex) {
                var rowKey = "RequestId=" + data.RequestId;
                $(row).attr('data-entitykey', rowKey);
            }
        });
    })
</script>