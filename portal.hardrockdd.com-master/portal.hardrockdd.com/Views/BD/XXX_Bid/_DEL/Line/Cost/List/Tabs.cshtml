@model portal.Models.Views.Bid.BoreLine.CostItemListViewModel
@{ 
    var guidId = string.Format("guid_{0}", Guid.NewGuid());
}
<ul class="nav nav-tabs nav-justified nav-justified-mobile" data-sortable-id="index-2">
    <li class="nav-item"><a href="#units-@guidId" data-toggle="tab" class="nav-link active"><i class="fa fa-cube fa-lg m-r-5"></i> <span class="d-none d-md-inline">Cost Item Units</span></a></li>
    <li class="nav-item"><a href="#purchase-@guidId" data-toggle="tab" class="nav-link"><i class="fas fa-dollar-sign fa-lg m-r-5"></i> <span class="d-none d-md-inline">Cost Item Amounts</span></a></li>
</ul>

<div class="tab-content" style="padding-left: 0px; padding-right: 0px; overflow:unset;">
    <div class="tab-pane fade active show" id="units-@guidId">
        @Html.Partial("../BD/Bid/Line/Cost/List/Table", Model)
    </div>
    <div class="tab-pane fade" id="purchase-@guidId">
        @Html.Partial("../BD/Bid/Line/Cost/List/TableAmount", Model)
    </div>
</div>