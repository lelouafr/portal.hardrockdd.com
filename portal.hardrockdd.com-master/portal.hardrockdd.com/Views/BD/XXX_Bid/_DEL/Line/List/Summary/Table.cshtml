@model  portal.Models.Views.Bid.BoreLineListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var tableLayout = new TableLayoutModel(this);
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";
    foreach (var prp in tableLayout.Properties)
    {
        if (prp.IsKey)
        {
            var myData = Model.GetType().GetProperty(prp.Property);
            var myVal = myData.GetValue(Model, null);
            if (tableKey != string.Empty)
            {
                tableKey += "&";
            }
            tableKey += prp.Property + "=" + myVal.ToString();
        }
    }
}

<table class="table"
       id="@tableId"
       data-tablekey="@tableKey">
    <thead>
        <tr class="">
            <th width="18%">@Html.LabelForRequired(model => model.List.FirstOrDefault().Description) </th>
            <th width="7%">@Html.LabelForRequired(model => model.List.FirstOrDefault().Footage)</th>
            <th width="7%">@Html.LabelForRequired(model => model.List.FirstOrDefault().PipeSize)</th>
            <th width="8%">@Html.LabelForRequired(model => model.List.FirstOrDefault().GroundDensityId)</th>
            <th width="12%">@Html.LabelForRequired(model => model.List.FirstOrDefault().RigCategoryId)</th>
            @*<th width="7%">@Html.LabelForRequired(model => model.List.FirstOrDefault().MobeDays)</th>
            <th width="7%">@Html.LabelForRequired(model => model.List.FirstOrDefault().DeMobeDays)</th>*@
            <th width="7%">@Html.LabelForRequired(model => model.List.FirstOrDefault().DirtCost)</th>
            <th width="7%">@Html.LabelForRequired(model => model.List.FirstOrDefault().RockCost)</th>
            <th width="5%">@Html.LabelForRequired(model => model.List.FirstOrDefault().DirtDays)</th>
            <th width="5%">@Html.LabelForRequired(model => model.List.FirstOrDefault().RockDays)</th>            
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.List)
        {
            @Html.Partial("../BD/Bid/Line/List/Summary/TableRow", obj)
        }
    </tbody>
</table>
<script>

    $('#@tableId').ready(function() {
        h = 25.6 * @(Model.List.Count);
        if (h > 600) {
            h = 600;
        }
        var table = $('#@tableId').DataTable({
            orderCellsTop: true,
            paging: false,
            autoWidth: true,
            ordering: false,
            scrollY: h,
        });
        $('.dataTables_filter').hide();
    })

</script>