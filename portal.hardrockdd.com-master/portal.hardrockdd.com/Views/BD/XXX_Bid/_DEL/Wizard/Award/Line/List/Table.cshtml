@model  portal.Models.Views.Bid.Wizard.Award.PackageBoreLineListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var tableLayout = new TableLayoutModel(this);
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";
    foreach (var prp in tableLayout.Properties)
    {
        if (prp.IsKey)
        {
            var myData = Model.GetType().GetProperty(prp.Property);
            var myVal = myData.GetValue(Model, null);
            if (tableKey != string.Empty)
            {
                tableKey += "&";
            }
            tableKey += prp.Property + "=" + myVal.ToString();
        }
    }
}

<table class="table"
       id="@tableId"
       data-urlupdate="@Url.Action("Update", "BidBoreLineAwardWizard")"
       data-urlvalidate="@Url.Action("Validate", "BidBoreLineAwardWizard")"
       data-tablekey="@tableKey">
    <thead>
        <tr class="">
            <th width="15%">@Html.LabelForRequired(model => model.List.FirstOrDefault().Description)</th>
            <th width="15%">@Html.LabelForRequired(model => model.List.FirstOrDefault().DivisionId)</th>
            <th width="10%">@Html.LabelForRequired(model => model.List.FirstOrDefault().Status)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.List)
        {
            @Html.Partial("../BD/Bid/Wizard/Award/Line/List/TableRow", obj)
        }
    </tbody>
</table>

<script>
    $('#@tableId').ready(function () {
        $('#@tableId').arrowTable();
    })
</script>