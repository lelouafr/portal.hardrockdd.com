<script>
    $('#@tableId').ready(function () {
        function handleCalcTypeFormat(elem) {
            val = $(elem).val();
            //console.log('CalcType changed: ', val);
            if (val == "1") {
                $(elem).removeClass("bg-green-transparent-2");
                $(elem).addClass("bg-blue-transparent-2");
            }
            if (val == "0") {
                $(elem).removeClass("bg-blue-transparent-2");
                $(elem).addClass("bg-green-transparent-2");
            }
        }

        $('#@tableId').find('select.CalcType').each(function () {
            handleCalcTypeFormat(this);
        });

        $('#@tableId').on('change', 'select.CalcType', function () {
            handleCalcTypeFormat(this);
        });
    });
</script>