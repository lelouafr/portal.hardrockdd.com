@model portal.Models.Views.PhaseMaster.PhaseMasterListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";

}
<table class="table"
       id="@tableId"
       data-urlsearchreturn="@Url.Action("SearchReturn", "PhaseMaster")"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().PhaseGroupId)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().PhaseId)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Description)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().VendorId)</th>
            @*<th>@Html.LabelForRequired(model => model.List.FirstOrDefault().DisplayName)</th>*@
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<script>
    $(document).ready(function () {
        myTable = $('#@tableId').DataTable({
            autoWidth: false,
            paging: true,
            ordering: true,
            data: @Html.Raw(@Model.ListJSON),
            columns: [
                { data: "PhaseGroupId" },
                { data: "PhaseId" },
                { data: "Description" },
                { data: "VendorId" }],
            columnDefs: [
                { targets: [0,3], visible: false }],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
            createdRow: function (row, data, dataIndex) {
                var rowKey = "PhaseGroupId=" + data.PhaseGroupId + "&PhaseId=" + data.PhaseId + "&VendorId=" + data.VendorId;
                $(row).attr('data-entitykey', rowKey);
            }
        });
    });
</script>