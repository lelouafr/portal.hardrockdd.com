@model portal.Models.Views.JC.Job.JobListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";

}
<table class="table"
       id="@tableId"
       data-urlsearchreturn="@Url.Action("SearchReturn","JobCombo")"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().JCCo)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().JobId)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().JobName)</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<script>
    $(document).ready(function () {
        h = tableHeight($('#@tableId'), 100, 25.6);
        myTable = $('#@tableId').DataTable({
            paging: false,
            scrollY: h,
            ordering: true,
            data: @Html.Raw(@Model.ListJSON),
            columns: [
                { data: "JCCo" },
                { data: "JobId" },
                { data: "JobName" },
            ],
            columnDefs: [
                { targets: [0], visible: false }],
            createdRow: function (row, data, dataIndex) {
                var rowKey = "JCCo=" + data.Co + "&JobId=" + data.JobId;
                $(row).attr('data-rowKey', rowKey);
            }
        });
        setTimeout(function () {
            $('#@tableId').DataTable().columns.adjust().draw();
        }, 500);
    });
</script>