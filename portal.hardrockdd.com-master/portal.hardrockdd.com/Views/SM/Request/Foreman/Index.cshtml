@model portal.Models.Views.SM.Request.ForemanDashboardViewModel
@{
    ViewBag.Title = "Foreman Dashboard";
    var requests = Model.Requests ?? new List<portal.Models.Views.SM.Request.ForemanRequestViewModel>();
    var pendingCount = Model.PendingCount;
    var inProgressCount = Model.InProgressCount;
    var completedCount = Model.CompletedTodayCount;
}

@section Styles {
    <link href="~/Content/maintenance-portal.css" rel="stylesheet" />
}

<div class="maintenance-portal">
    <!-- Page Header -->
    <div class="mp-page-header">
        <h1 class="mp-page-title">Foreman Dashboard</h1>
        <p class="mp-page-subtitle">Assign and manage work orders for your team</p>
    </div>

    <div class="mp-content">
        <!-- Stats Cards -->
        <div class="mp-stats-grid">
            <div class="mp-stat-card">
                <div class="mp-stat-icon" style="background: #fef2f2; color: #dc2626;">
                    <i class="fas fa-exclamation-circle"></i>
                </div>
                <div class="mp-stat-content">
                    <div class="mp-stat-number">@pendingCount</div>
                    <div class="mp-stat-label">Pending</div>
                </div>
            </div>
            <div class="mp-stat-card">
                <div class="mp-stat-icon in-progress">
                    <i class="fas fa-user-cog"></i>
                </div>
                <div class="mp-stat-content">
                    <div class="mp-stat-number">@inProgressCount</div>
                    <div class="mp-stat-label">In Progress</div>
                </div>
            </div>
            <div class="mp-stat-card">
                <div class="mp-stat-icon completed">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="mp-stat-content">
                    <div class="mp-stat-number">@completedCount</div>
                    <div class="mp-stat-label">Completed Today</div>
                </div>
            </div>
        </div>

        <!-- Requests Table -->
        <div class="mp-table-card">
            <div class="mp-table-header">
                <h2 class="mp-table-title">
                    Service Requests
                    <span class="mp-count">@requests.Count</span>
                </h2>
                <div class="mp-table-actions">
                    <button class="mp-btn" onclick="location.reload()">
                        <i class="fas fa-sync-alt"></i> Refresh
                    </button>
                    <a href="@Url.Action("EquipmentIndex", "ServiceRequest")" class="mp-btn primary">
                        <i class="fas fa-plus"></i> New Request
                    </a>
                </div>
            </div>

            @if (requests.Any())
            {
                <table class="mp-table">
                    <thead>
                        <tr>
                            <th>Request / WO</th>
                            <th>Equipment</th>
                            <th>Issue</th>
                            <th>Assigned To</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var req in requests.OrderByDescending(r => r.IsEmergency).ThenBy(r => r.Status == "Completed").ThenByDescending(r => r.RequestDate))
                        {
                            var isCompleted = req.Status == "Completed";
                            var rowClass = isCompleted ? "mp-completed-row" : "";
                            string statusClass, statusText;

                            if (isCompleted)
                            {
                                statusClass = "completed";
                                statusText = "Completed";
                            }
                            else if (req.IsEmergency)
                            {
                                statusClass = "urgent";
                                statusText = "Emergency";
                            }
                            else if (string.IsNullOrEmpty(req.AssignedMechanicName))
                            {
                                statusClass = "pending";
                                statusText = req.Status ?? "Pending";
                            }
                            else
                            {
                                statusClass = "in-progress";
                                statusText = req.Status ?? "In Progress";
                            }

                            <tr class="@rowClass">
                                <td>
                                    @if (req.HasWorkOrder && !string.IsNullOrEmpty(req.WorkOrderId))
                                    {
                                        <a href="@Url.Action("Index", "EMWorkOrder", new { emco = req.EMCo, workOrderId = req.WorkOrderId })" class="mp-wo-id">
                                            @req.WorkOrderId
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="mp-wo-id" style="color: var(--mp-gray-500);">
                                            REQ-@req.RequestId
                                        </span>
                                    }
                                    <span class="mp-badge @statusClass">@statusText</span>
                                </td>
                                <td>
                                    <div class="mp-equipment-cell">
                                        <div class="mp-equipment-icon">
                                            <i class="fas fa-truck"></i>
                                        </div>
                                        <div class="mp-equipment-info">
                                            <div class="mp-equipment-id">@req.EquipmentId</div>
                                            <div class="mp-equipment-name">@req.EquipmentDescription</div>
                                        </div>
                                    </div>
                                </td>
                                <td class="mp-description-cell" title="@req.Description">@req.Description</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(req.AssignedMechanicName))
                                    {
                                        <span style="color: var(--mp-gray-700);">
                                            <i class="fas fa-user" style="color: var(--mp-primary);"></i> @req.AssignedMechanicName
                                        </span>
                                    }
                                    else
                                    {
                                        <span style="color: var(--mp-gray-400); font-style: italic;">Not assigned</span>
                                    }
                                </td>
                                <td class="mp-date-cell">@req.RequestDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="mp-action-buttons">
                                        @if (req.HasWorkOrder && !string.IsNullOrEmpty(req.WorkOrderId))
                                        {
                                            <a href="@Url.Action("Index", "EMWorkOrder", new { emco = req.EMCo, workOrderId = req.WorkOrderId })"
                                               class="mp-btn-action view" title="View Work Order">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        }
                                        @if (!isCompleted)
                                        {
                                            <button type="button" class="mp-btn-action assign" title="Assign Mechanic"
                                                    onclick="openAssignModal('@req.SMCo', '@req.RequestId', '@req.LineId', '@req.EquipmentId', '@req.AssignedMechanicId')">
                                                <i class="fas fa-user-plus"></i>
                                            </button>
                                            if (req.HasWorkOrder && !string.IsNullOrEmpty(req.WorkOrderId))
                                            {
                                                <a href="@Url.Action("CostEntry", "ServiceRequest", new { emco = req.EMCo, workOrderId = req.WorkOrderId })"
                                                   class="mp-btn-action cost" title="Cost Entry">
                                                    <i class="fas fa-dollar-sign"></i>
                                                </a>
                                            }
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div style="padding: 60px 24px; text-align: center;">
                    <i class="fas fa-clipboard-list" style="font-size: 3em; color: var(--mp-gray-300); margin-bottom: 16px;"></i>
                    <h3 style="color: var(--mp-gray-600); margin-bottom: 8px;">No Requests</h3>
                    <p style="color: var(--mp-gray-500);">There are no service requests at this time.</p>
                    <a href="@Url.Action("EquipmentIndex", "ServiceRequest")" class="mp-btn primary" style="margin-top: 16px;">
                        <i class="fas fa-plus"></i> Create Service Request
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<!-- Assign Mechanic Modal -->
<div class="modal fade" id="assignModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content" style="border-radius: 12px;">
            <div class="modal-header" style="background: var(--mp-gray-50); border-bottom: 1px solid var(--mp-gray-200);">
                <h5 class="modal-title" style="font-weight: 600;">
                    <i class="fas fa-user-plus" style="color: var(--mp-primary);"></i> Assign Mechanic
                </h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" style="padding: 24px;">
                <div class="mp-info-panel" style="margin-bottom: 20px;">
                    <div class="mp-info-row">
                        <span class="mp-info-label">Request:</span>
                        <span class="mp-info-value" id="assignModalReq" style="font-weight: 600;"></span>
                    </div>
                    <div class="mp-info-row">
                        <span class="mp-info-label">Equipment:</span>
                        <span class="mp-info-value" id="assignModalEquip"></span>
                    </div>
                </div>

                <div class="mp-form-group">
                    <label class="mp-form-label required">Select Mechanic</label>
                    <select id="mechanicSelect" class="mp-form-control">
                        <option value="">-- Select Mechanic --</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer" style="background: var(--mp-gray-50); border-top: 1px solid var(--mp-gray-200);">
                <button type="button" class="mp-btn" data-dismiss="modal">Cancel</button>
                <button type="button" class="mp-btn primary" onclick="assignMechanic()">
                    <i class="fas fa-check"></i> Assign
                </button>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
    var currentSMCo, currentRequestId, currentLineId;

    function openAssignModal(smco, requestId, lineId, equipmentId, currentMechanicId) {
        currentSMCo = smco;
        currentRequestId = requestId;
        currentLineId = lineId;

        $('#assignModalReq').text('REQ-' + requestId);
        $('#assignModalEquip').text(equipmentId);
        $('#mechanicSelect').val(currentMechanicId || '');

        $('#assignModal').modal('show');
    }

    function assignMechanic() {
        var mechanicId = $('#mechanicSelect').val();
        if (!mechanicId) {
            alert('Please select a mechanic');
            return;
        }

        $.post('@Url.Action("AssignMechanic", "ServiceRequest")', {
            smco: currentSMCo,
            requestId: currentRequestId,
            lineId: currentLineId,
            mechanicId: mechanicId,
            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
        }, function(response) {
            if (response.success) {
                $('#assignModal').modal('hide');
                location.reload();
            } else {
                alert('Error: ' + (response.error || 'Unknown error'));
            }
        }).fail(function() {
            alert('Error assigning mechanic');
        });
    }
    </script>
}
