@model portal.Models.Views.SM.Request.MechanicDashboardViewModel
@{
    ViewBag.Title = "My Work Orders";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" />
<style>
    .btn-complete {
        background-color: #28a745;
        color: white;
    }

        .btn-complete:hover {
            background-color: #218838;
            color: white;
        }

    .completed-row {
        background-color: #e8f5e9 !important;
    }
</style>

<ol class="breadcrumb pull-right">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { Area = "" })">Home</a></li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>
<h1 class="page-header">@ViewBag.Title</h1>
<p class="text-muted">Welcome, @Model.MechanicName</p>

<!-- Summary Cards -->
<div class="row m-b-20">
    <div class="col-md-4">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h5>Assigned</h5>
                <h2>@Model.AssignedCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h5>In Progress</h5>
                <h2>@Model.InProgressCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h5>Completed Today</h5>
                <h2>@Model.CompletedTodayCount</h2>
            </div>
        </div>
    </div>
</div>

<!-- Work Orders Table -->
<div class="panel panel-inverse">
    <div class="panel-heading">
        <h4 class="panel-title">My Assigned Work Orders (@Model.WorkOrders.Count)</h4>
    </div>
    <div class="panel-body">
        @Html.AntiForgeryToken()
        <table class="table table-striped" id="workOrdersTable">
            <thead>
                <tr>
                    <th>Work Order</th>
                    <th>Equipment</th>
                    <th>Description</th>
                    <th>Created</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.WorkOrders)
                {
                    var rowClass = item.IsCompleted ? "completed-row" : "";
                    <tr class="@rowClass">
                        <td>
                            <a href="@Url.Action("Index", "EMWorkOrder", new { emco = item.EMCo, workOrderId = item.WorkOrderId })">
                                @item.WorkOrderId
                            </a>
                        </td>
                        <td>@item.EquipmentId - @item.EquipmentDescription</td>
                        <td>@item.Description</td>
                        <td>@item.DateCreated.ToShortDateString()</td>
                        <td>
                            @if (item.IsCompleted)
                            {
                                <span class="badge badge-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pending</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Index", "EMWorkOrder", new { emco = item.EMCo, workOrderId = item.WorkOrderId })"
                               class="btn btn-xs btn-primary" title="View">
                                <i class="fa fa-eye"></i>
                            </a>
                            @if (!item.IsCompleted)
                            {
                                <button type="button" class="btn btn-xs btn-complete complete-wo"
                                        data-emco="@item.EMCo"
                                        data-workorderid="@item.WorkOrderId"
                                        data-woitem="@item.WOItem"
                                        data-equipment="@item.EquipmentId"
                                        title="Mark Complete">
                                    <i class="fa fa-check"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Complete Work Order Modal -->
<div class="modal fade" id="completeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Complete Work Order</h5>
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="complete_emco" />
                <input type="hidden" id="complete_workorderid" />
                <input type="hidden" id="complete_woitem" />

                <p><strong>Equipment:</strong> <span id="complete_equipment"></span></p>

                <div class="form-group">
                    <label for="completionNotes">Completion Notes (optional)</label>
                    <textarea id="completionNotes" class="form-control" rows="3" placeholder="Enter any notes about the work performed..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmComplete">
                    <i class="fa fa-check"></i> Mark Complete
                </button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#workOrdersTable').DataTable({
            order: [[3, 'desc']],
            pageLength: 25
        });

        // Open complete modal
        $(document).on('click', '.complete-wo', function () {
            var btn = $(this);
            $('#complete_emco').val(btn.data('emco'));
            $('#complete_workorderid').val(btn.data('workorderid'));
            $('#complete_woitem').val(btn.data('woitem'));
            $('#complete_equipment').text(btn.data('equipment'));
            $('#completionNotes').val('');
            $('#completeModal').modal('show');
        });

        // Confirm completion
        $('#confirmComplete').click(function () {
            $(this).prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Completing...');

            $.post('@Url.Action("CompleteWorkOrderItem", "ServiceRequest")', {
                emco: $('#complete_emco').val(),
                workOrderId: $('#complete_workorderid').val(),
                woItem: $('#complete_woitem').val(),
                notes: $('#completionNotes').val(),
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            }, function (result) {
                if (result.success) {
                    $('#completeModal').modal('hide');
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Unknown error'));
                    $('#confirmComplete').prop('disabled', false).html('<i class="fa fa-check"></i> Mark Complete');
                }
            }).fail(function() {
                alert('Error completing work order');
                $('#confirmComplete').prop('disabled', false).html('<i class="fa fa-check"></i> Mark Complete');
            });
        });
    });
</script>
