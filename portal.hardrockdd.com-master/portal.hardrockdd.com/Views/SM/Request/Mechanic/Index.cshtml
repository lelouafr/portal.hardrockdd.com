@model portal.Models.Views.SM.Request.MechanicDashboardViewModel
@{
    ViewBag.Title = "My Work Orders";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css" />
<style>
    .btn-complete {
        background-color: #28a745;
        color: white;
    }

        .btn-complete:hover {
            background-color: #218838;
            color: white;
        }

    .btn-inspect {
        background-color: #ffc107;
        color: black;
    }

        .btn-inspect:hover {
            background-color: #e0a800;
            color: black;
        }

    .completed-row {
        background-color: #e8f5e9 !important;
    }

    .status-badge {
        font-size: 0.85em;
    }
</style>

<ol class="breadcrumb pull-right">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { Area = "" })">Home</a></li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
</ol>
<h1 class="page-header">@ViewBag.Title</h1>
<p class="text-muted">Welcome, @Model.MechanicName</p>

<!-- Summary Cards -->
<div class="row m-b-20">
    <div class="col-md-4">
        <div class="card bg-warning text-white">
            <div class="card-body text-center">
                <h5>Assigned</h5>
                <h2>@Model.AssignedCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-info text-white">
            <div class="card-body text-center">
                <h5>In Progress</h5>
                <h2>@Model.InProgressCount</h2>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-success text-white">
            <div class="card-body text-center">
                <h5>Completed Today</h5>
                <h2>@Model.CompletedTodayCount</h2>
            </div>
        </div>
    </div>
</div>

<!-- Work Orders Table -->
<div class="panel panel-inverse">
    <div class="panel-heading">
        <h4 class="panel-title">My Assigned Work Orders (@Model.WorkOrders.Count)</h4>
    </div>
    <div class="panel-body">
        @Html.AntiForgeryToken()
        <table class="table table-striped" id="workOrdersTable">
            <thead>
                <tr>
                    <th>Work Order</th>
                    <th>Equipment</th>
                    <th>Description</th>
                    <th>Created</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.WorkOrders)
                {
                    var rowClass = item.IsCompleted ? "completed-row" : "";
                    <tr class="@rowClass">
                        <td>
                            <a href="@Url.Action("Index", "EMWorkOrder", new { emco = item.EMCo, workOrderId = item.WorkOrderId })">
                                @item.WorkOrderId
                            </a>
                        </td>
                        <td>@item.EquipmentId - @item.EquipmentDescription</td>
                        <td>@item.Description</td>
                        <td>@item.DateCreated.ToShortDateString()</td>
                        <td>
                            @if (item.IsCompleted)
                            {
                                <span class="badge badge-success status-badge">Completed</span>
                            }
                            else
                            {
                                <span class="badge badge-warning status-badge">Pending</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Index", "EMWorkOrder", new { emco = item.EMCo, workOrderId = item.WorkOrderId })"
                               class="btn btn-xs btn-primary" title="View">
                                <i class="fa fa-eye"></i>
                            </a>
                            @if (!item.IsCompleted)
                            {
                                <button type="button" class="btn btn-xs btn-complete complete-wo"
                                        data-emco="@item.EMCo"
                                        data-workorderid="@item.WorkOrderId"
                                        data-woitem="@item.WOItem"
                                        data-equipment="@item.EquipmentId"
                                        data-description="@item.Description"
                                        title="Complete Work Order">
                                    <i class="fa fa-check"></i>
                                </button>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Enhanced Complete Work Order Modal -->
<div class="modal fade" id="completeModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title"><i class="fa fa-clipboard-check"></i> Complete Work Order</h5>
                <button type="button" class="close text-white" data-dismiss="modal"><span>&times;</span></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="complete_emco" />
                <input type="hidden" id="complete_workorderid" />
                <input type="hidden" id="complete_woitem" />

                <div class="alert alert-info">
                    <strong>Equipment:</strong> <span id="complete_equipment"></span><br>
                    <strong>Issue:</strong> <span id="complete_description"></span>
                </div>

                <!-- Completion Status -->
                <div class="form-group">
                    <label><strong>Completion Status *</strong></label>
                    <div class="btn-group btn-group-toggle d-flex" data-toggle="buttons">
                        <label class="btn btn-outline-success flex-fill active">
                            <input type="radio" name="completionStatus" value="C" checked> Completed
                        </label>
                        <label class="btn btn-outline-warning flex-fill">
                            <input type="radio" name="completionStatus" value="P"> Partially Completed
                        </label>
                        <label class="btn btn-outline-danger flex-fill">
                            <input type="radio" name="completionStatus" value="F"> Requires Follow-up
                        </label>
                    </div>
                </div>

                <!-- Repairs Completed -->
                <div class="form-group">
                    <label for="repairsCompleted"><strong>Repairs Completed *</strong></label>
                    <textarea id="repairsCompleted" class="form-control" rows="3"
                              placeholder="Describe the repairs performed..." required></textarea>
                </div>

                <!-- Parts Replaced -->
                <div class="form-group">
                    <label for="partsReplaced">Parts Replaced</label>
                    <textarea id="partsReplaced" class="form-control" rows="2"
                              placeholder="List any parts that were replaced..."></textarea>
                </div>

                <!-- Backorder Section (hidden by default) -->
                <div id="backorderSection" style="display: none;">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="form-group">
                                <label for="partsBackordered">Parts on Backorder</label>
                                <input type="text" id="partsBackordered" class="form-control"
                                       placeholder="Parts waiting to arrive...">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="backorderETA">Expected Arrival</label>
                                <input type="date" id="backorderETA" class="form-control">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="temporaryRepairs">Temporary Repairs Made</label>
                        <input type="text" id="temporaryRepairs" class="form-control"
                               placeholder="Any temporary fixes applied...">
                    </div>
                </div>

                <!-- Recommended Future Work -->
                <div class="form-group">
                    <label for="recommendedFutureWork">Recommended Future Work</label>
                    <textarea id="recommendedFutureWork" class="form-control" rows="2"
                              placeholder="Any additional work recommended for future..."></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-success" id="confirmComplete">
                    <i class="fa fa-check"></i> Submit & Complete
                </button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#workOrdersTable').DataTable({
            order: [[3, 'desc']],
            pageLength: 25
        });

        // Show/hide backorder section based on status
        $('input[name="completionStatus"]').change(function() {
            var status = $(this).val();
            if (status === 'P' || status === 'F') {
                $('#backorderSection').slideDown();
            } else {
                $('#backorderSection').slideUp();
            }
        });

        // Open complete modal
        $(document).on('click', '.complete-wo', function () {
            var btn = $(this);
            $('#complete_emco').val(btn.data('emco'));
            $('#complete_workorderid').val(btn.data('workorderid'));
            $('#complete_woitem').val(btn.data('woitem'));
            $('#complete_equipment').text(btn.data('equipment'));
            $('#complete_description').text(btn.data('description'));

            // Reset form
            $('#repairsCompleted').val('');
            $('#partsReplaced').val('');
            $('#partsBackordered').val('');
            $('#backorderETA').val('');
            $('#temporaryRepairs').val('');
            $('#recommendedFutureWork').val('');
            $('input[name="completionStatus"][value="C"]').prop('checked', true).parent().addClass('active');
            $('input[name="completionStatus"]').not('[value="C"]').parent().removeClass('active');
            $('#backorderSection').hide();

            $('#completeModal').modal('show');
        });

        // Confirm completion
        $('#confirmComplete').click(function () {
            var repairs = $('#repairsCompleted').val().trim();
            if (!repairs) {
                alert('Please describe the repairs completed');
                $('#repairsCompleted').focus();
                return;
            }

            $(this).prop('disabled', true).html('<i class="fa fa-spinner fa-spin"></i> Submitting...');

            $.post('@Url.Action("CompleteWorkOrderWithDetails", "ServiceRequest")', {
                emco: $('#complete_emco').val(),
                workOrderId: $('#complete_workorderid').val(),
                woItem: $('#complete_woitem').val(),
                completionStatus: $('input[name="completionStatus"]:checked').val(),
                repairsCompleted: repairs,
                partsReplaced: $('#partsReplaced').val(),
                partsBackordered: $('#partsBackordered').val(),
                backorderETA: $('#backorderETA').val(),
                temporaryRepairs: $('#temporaryRepairs').val(),
                recommendedFutureWork: $('#recommendedFutureWork').val(),
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            }, function (result) {
                if (result.success) {
                    $('#completeModal').modal('hide');
                    location.reload();
                } else {
                    alert('Error: ' + (result.error || 'Unknown error'));
                    $('#confirmComplete').prop('disabled', false).html('<i class="fa fa-check"></i> Submit & Complete');
                }
            }).fail(function() {
                alert('Error completing work order');
                $('#confirmComplete').prop('disabled', false).html('<i class="fa fa-check"></i> Submit & Complete');
            });
        });
    });
</script>
