@model portal.Models.Views.SM.RequestLine.EquipmentListLineViewModel
@{
    ViewBag.TableRow = "True";
    ViewBag.DisplayOnly = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var tableLayout = new TableLayoutModel(this);
    var tableKey = tableLayout.TableKey;

}
<table class="table"
       id="@tableId"
       data-urlselect="@Url.Action("ServiceEquipmentPanel", "ServiceRequest")"
       data-dstselect="reviewPanel"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th data-datatable-filter-type="none">@Html.LabelForRequired(model => model.List.FirstOrDefault().EMCo)</th>
            <th data-datatable-filter-type="none">@Html.LabelForRequired(model => model.List.FirstOrDefault().RequestDate)</th>
            <th data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().EquipmentId)</th>
            <th data-datatable-filter-type="select">@Html.LabelForRequired(model => model.List.FirstOrDefault().EquipmentName)</th>
            <th data-datatable-filter-type="select">@Html.LabelForRequired(model => model.List.FirstOrDefault().RequestedUser)</th>
            <th data-datatable-filter-type="select">@Html.LabelForRequired(model => model.List.FirstOrDefault().Status)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.List)
        {
            @Html.Partial("../SM/Equipment/Summary/RequestLine/TableRow", item)
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        var itemCnt = @(Model.List.Count());
        h = tableHeight($('#@tableId'), itemCnt, 42.4);
        h -= 75;

        myTable = $('#@tableId').DataTable({
            autoWidth: true,
            paging: false,
            scrollY: 250,
            ordering: true,
            order: [
                [1, "desc"]
            ],
            columnDefs: [
                { targets: [0], visible: false },
                ],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
        });
    });
</script>