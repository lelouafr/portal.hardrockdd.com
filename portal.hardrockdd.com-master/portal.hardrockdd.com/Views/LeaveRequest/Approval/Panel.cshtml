@model portal.Models.Views.Payroll.Leave.LeaveRequestSummaryListViewModel
<div class="panel panel-inverse"
     
     data-reloadurl="@Url.Action("Table", ViewBag.Controller)">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
            
        </div>
        <h4 class="panel-title">Time Off Requests</h4>
    </div>
    <div class="panel-body" id="LeaveRequestSummaryListViewModel">
        @Html.Partial("../LeaveRequest/Approval/Table", Model)
    </div>
</div>

<div class="modal fade"
     id="rejectRow"
     data-url="@Url.Action("Index", "LeaveRequestReject")">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
        </div>
    </div>
</div>

<script>
    

    $('#rejectRow').on('show.bs.modal', function (event) {
        var dst = $(this).find(".modal-content");
        var url =  $(this).data("url");
        var data = $(event.relatedTarget).data("entitykey");

        //console.log(dst, url, data);
        $.ajax({
            type:"Get",
            dataType: "html",
            url: url,
            data: data,
            success: function (data) {
                dst.html(data);
            }
        });
    });

    $('#rejectRow').on('hidden.bs.modal', function () {
        var dst = $(this).find(".modal-content");
        dst.html('');
    });
    
    
</script>