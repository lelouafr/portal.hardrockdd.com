@model  portal.Models.Views.Payroll.Leave.LeaveRequestSummaryListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";

}
<table class="table"
       id="@tableId"
       data-urlselect="@Url.Action("PartialIndex", "LeaveRequest")"
       data-dstselect="reviewPanel"
       data-dstselectvalidate="true"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Status)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().EmployeeName)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Description)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Hours)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Balance)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model.List)
        {
            @Html.Partial("../LeaveRequest/Approval/TableRow", request)
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#@tableId').DataTable({
            autoWidth: false,
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
        });


        $('#@tableId tbody').on('click', '.approveRow', function (e) {
            e.preventDefault();
            var url =  $(this).data("approvalurl");
            var row = $(this).closest('tr');
            var data = $(row).data("entitykey");
            var token = $(row).find('[name="__RequestVerificationToken"]');
            if (token.length != 0) {
                data += '&__RequestVerificationToken=' + token.val();
            }

            //console.log(url, data);
            var rowElem = $(this).closest('tr');


            $('.approveRow').prop('disabled', true);
            $(this).find('i').removeClass('fa').removeClass('fa-thumbs-up').addClass('fa').addClass('fa-spinner').addClass('fa-spin');
            var data = data;
            $.post(url, data, function (res) {
                if (res.success === "true") {
                    var btnGroup = $(rowElem).find('.btn-group');
                    $(btnGroup).remove();
                    $('.approveRow').prop('disabled', false);
                }
                else {
                    rowElem.click();
                    $('.approveRow').show();
                }
            });
        });
    });
</script>