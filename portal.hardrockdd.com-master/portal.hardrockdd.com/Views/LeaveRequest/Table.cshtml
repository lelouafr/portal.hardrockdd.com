@model portal.Models.Views.Payroll.Leave.LeaveRequestSummaryListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";
    var yearFlt = Model.List.DefaultIfEmpty().Max(max => max == null? DateTime.Now.Year : max.Year);
}
<table class="table"
       id="@tableId"
       data-urlcreate="@Url.Action("Add", "LeaveRequest")"
       data-urlselect="@Url.Action("PartialIndex", "LeaveRequest")"
       data-dstselect="reviewPanel"
       data-dstselectvalidate="false"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th data-datatable-filter-type="select" data-datatable-filter-value="@yearFlt">@Html.LabelForRequired(model => model.List.FirstOrDefault().Year)</th>
            <th data-datatable-filter-type="select">@Html.LabelForRequired(model => model.List.FirstOrDefault().EmployeeName)</th>
            <th data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().Status)</th>
            <th data-datatable-filter-type="none" class="hidden-xs hidden-sm">@Html.LabelForRequired(model => model.List.FirstOrDefault().Description)</th>
            <th data-datatable-filter-type="none">@Html.LabelForRequired(model => model.List.FirstOrDefault().Hours)</th>
            @if (ViewBag.Controller != "LeaveRequestUserList")
            {
                @*<th class="hidden-xs hidden-sm">@Html.LabelForRequired(model => model.List.FirstOrDefault().CreatedUser)</th>*@
            }
            else
            {
                <th data-datatable-filter-type="none">
                    <button class="btn btn-primary addRow pull-right">
                        <i class="fa fa-plus"></i>
                    </button>
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model.List)
        {
            @Html.Partial("../LeaveRequest/TableRow", request)
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        //var h = tableHeight($("#@tableId"), 100, 25.6) -50;
        $('#@tableId').DataTable({
            autoWidth: true,
            paging: false,
            scrollY: 250,
            order: [[0, "desc"]],
            'rowsGroup': [0, 1],
            "columnDefs": [{
                "targets": 4,
                "orderable": false
            }],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
        });
        var controller = "@ViewBag.Controller";
    });
</script>