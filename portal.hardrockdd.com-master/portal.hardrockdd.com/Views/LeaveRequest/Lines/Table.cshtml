@model  portal.Models.Views.Payroll.Leave.LeaveRequestLineListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var tableLayout = new TableLayoutModel(this);
    string tableKey = tableLayout.TableKey;
}

<table class="table"
       id="@tableId"
       data-urlcreate="@Url.Action("Add", "LeaveRequestLine")"
       data-urldelete="@Url.Action("Delete", "LeaveRequestLine")"
       data-urlupdate="@Url.Action("Update", "LeaveRequestLine")"
       data-urlvalidate="@Url.Action("Validate", "LeaveRequestLine")"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th width="20%">@Html.LabelForRequired(model => model.List.FirstOrDefault().WorkDate)</th>
            <th width="20%">@Html.LabelForRequired(model => model.List.FirstOrDefault().LeaveCodeId)</th>
            <th width="40%">@Html.LabelForRequired(model => model.List.FirstOrDefault().Comments)</th>
            <th width="15%">@Html.LabelForRequired(model => model.List.FirstOrDefault().Hours)</th>
            @if (!viewOnly)
            {
                <th>
                    <button class="btn btn-primary addRow pull-right">
                        <i class="fa fa-plus"></i>
                    </button>
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model.List)
        {
            @Html.Partial("../LeaveRequest/Lines/TableRow", request)
        }
    </tbody>
</table>

<script>
    $('#@tableId').ready(function () { Table().init($('#@tableId')); });
</script>