@model portal.Models.Views.AR.Invoice.InvoiceLineViewModel

@{
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    viewOnly = true;
    var formLayout = new TableLayoutModel(this);
    var entityKey = formLayout.TableKey;
    var formId = string.Format("form_{0}", Guid.NewGuid());
}

<form class="form-horizontal"
      id="@formId"
      data-entitykey="@entityKey"
      @*data-urlupdate="@Url.Action("LineUpdate", "APInvoice")"
      data-urlvalidate="@Url.Action("LineValidate", "APInvoice")"*@
      data-relatedpanel="InvoiceLineListViewModel">
    @Html.AntiForgeryToken()
    <div class="row justify-content-md-center">
        <div class=" col-xl-8 ">
            <div class="form-group has-feedback">
                <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
                </div>
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.ARCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.Mth, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.ARTransId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.LineId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.ContractId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.CustomerId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.JCCo, new { @id = Guid.NewGuid() })
    <div class="row">
        <div class="col-6">
            <div class="accordion">
                <div class="card" style="overflow:visible;">
                    <div class="card-header bg-dark-darker pointer-cursor d-flex align-items-center" data-toggle="collapse" data-target="#@(formId)_Info">
                        <i class="fa fa-circle fa-fw text-blue mr-2 f-s-8"></i> Info
                    </div>
                    <div id="@(formId)_Info" class="show">
                        <div class="card-body">
                            <div class="form-group has-feedback row">
                                @Html.EditorFor(m => m.ItemId)
                            </div>
                            <div class="form-group has-feedback row">
                                @Html.EditorFor(m => m.Description)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="accordion">
                <div class="card" style="overflow:visible;">
                    <div class="card-header bg-dark-darker pointer-cursor d-flex align-items-center" data-toggle="collapse" data-target="#@(formId)_Amount">
                        <i class="fa fa-circle fa-fw text-blue mr-2 f-s-8"></i> Line Amount
                    </div>
                    <div id="@(formId)_Amount" class="show">
                        <div class="card-body">
                            <div class="form-group has-feedback row">
                                @Html.EditorFor(m => m.Units)
                                @Html.EditorFor(m => m.UM)
                            </div>
                            <div class="form-group has-feedback row">
                                @Html.EditorFor(m => m.UnitPrice)
                            </div>
                            <div class="form-group has-feedback row">
                                @Html.EditorFor(m => m.Amount)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $('#@formId').ready(function () { Form().init($('#@formId')); });
</script>