@model portal.Models.Views.PM.Project.Schedule.ScheduleListViewModel

@{
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var tableLayout = new TableLayoutModel(this);
    string tableKey = tableLayout.TableKey;

}

@Html.AntiForgeryToken()
<table class="table "
       id="@tableId"
       data-dataurl="@Url.Action("Data", "PMProjectSchedule")"
       data-reloadurl="@Url.Action("Table", "PMProjectSchedule")"
       data-urlselect="@Url.Action("Panel", "PMProjectScheduleForm")"
       data-dstselect="reviewPanel"
       data-dstselectvalidate="false"
       data-tablekey="@tableKey">
    <thead>
        <tr class="">
            <th data-datatable-filter-type="none">@Html.LabelFor(model => model.List.FirstOrDefault().BDCo)</th>
            <th data-datatable-filter-type="input">@Html.LabelFor(model => model.List.FirstOrDefault().BidId)</th>
            <th data-datatable-filter-type="multiselect">@Html.LabelFor(model => model.List.FirstOrDefault().DivisionId)</th>
            <th data-datatable-filter-type="none">@Html.LabelFor(model => model.List.FirstOrDefault().JCCo)</th>
            <th data-datatable-filter-type="input">@Html.LabelFor(model => model.List.FirstOrDefault().ProjectId)</th>
            <th data-datatable-filter-type="input">@Html.LabelFor(model => model.List.FirstOrDefault().ProjectName)</th>
            <th data-datatable-filter-type="multiselect">@Html.LabelFor(model => model.List.FirstOrDefault().CrewId)</th>
            <th data-datatable-filter-type="daterange">@Html.LabelFor(model => model.List.FirstOrDefault().ProjectStartDate)</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
    $('#@tableId').ready(function () {
        var itemCnt = @(Model.List.Count());
        h = tableHeight($('#@tableId'), itemCnt, 42.4) -15;
        var table = $('#@tableId').DataTable({
            paging: false,
            autoWidth: true,
            ordering: true,
            processing: true,
            scrollCollapse: true,
            scrollY: 250,
            language: {
                loadingRecords: 'Loading....',
                processing: '<span class="spinner-small"></span>'
            },
            ajax: {
                url: $('#@tableId').data('dataurl'),
                data: function (d) {
                },
                type: "GET",
                datatype: "json",
            },
            columns: [
                { data: "BDCo", visible: false },
                { data: "BidId", visible: false },
                { data: "Division" },
                { data: "JCCo", visible: false },
                {
                    data: "ProjectId",
                    render: function (data, type, row, meta) {
                        if (data === null) {
                            return "Bid-" + row.BidId;
                        }
                        return data;
                    } },
                { data: "ProjectName" },
                { data: "CrewId", visible: false },
                {
                    data: "ProjectStartDate",
                    render: function (data, type) {
                        if (data === null) {
                            return null;
                        }
                        return type === 'sort' ? moment(data).format("YYYY-MM-DD") : moment(data).format('L');
                    }
                },
            ],
            order: [[2, "asc"], [7, "asc"]],
            fnInitComplete: function () {
                $('#@(tableId)_filter').hide();
                Table().init($('#@tableId'));
            },
            createdRow: function (row, data, dataIndex) {
                var rowKey = "JCCo=" + data.JCCo + "&projectId=" + data.ProjectId + "&bdco=" + data.BDCo + "&bidId=" + data.BidId + "&packageId=" + data.PackageId;
                $(row).attr('data-entitykey', rowKey);
            }
        });
    })
</script>