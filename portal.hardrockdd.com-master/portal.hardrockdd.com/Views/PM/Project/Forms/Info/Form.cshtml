@model portal.Models.Views.PM.Project.Form.ProjectInfoViewModel
@{
    var formLayout = new TableLayoutModel(this);
    var entityKey = formLayout.TableKey;
    var formId = string.Format("form_{0}", Guid.NewGuid());
}
<form class="form-horizontal"
      id="@formId"
      data-entitykey="@entityKey"
      data-urlupdate="@Url.Action("InfoUpdate", "PMProjectForm")"
      data-urlvalidate="@Url.Action("InfoValidate", "PMProjectForm")">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.JCCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.CustGroupId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.JobId, new { @id = Guid.NewGuid() })

    <div class="row">
        <div class="col-12">
            <div class="card" style="overflow:visible;">
                <div class="card-header bg-dark-darker pointer-cursor d-flex align-items-center" data-toggle="collapse" data-target="#Info">
                    <i class="fa fa-circle fa-fw text-blue mr-2 f-s-8"></i> Info
                </div>
                <div id="Info" class="collapse show">
                    <div class="card-body">
                        <div class="form-group has-feedback row">
                            @Html.EditorFor(m => m.JobId)
                            @Html.EditorFor(m => m.Description)
                        </div>
                        <div class="form-group has-feedback row">
                            @Html.EditorFor(m => m.StartDate)
                            @Html.EditorFor(m => m.StatusId)
                        </div>
                        <div class="form-group has-feedback row">
                            @Html.EditorFor(m => m.CustomerId)
                            @Html.EditorFor(m => m.ProjectOwner)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<script>
    $('#@formId').ready(function () { Form().init($('#@formId')); });
</script>