            </div>
            <input class="form-control percent" name="PullPipePercentComplete" type="text" value="@(string.Format("{0:P0}",Model.PullPipePercentComplete))" />
        </div>
    </td>
    <td>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <input type="checkbox" class=" js-switch" data-size="small" data-theme="green" name="IsRigDownComplete" @(Model.IsRigDownComplete ? "Checked" : "") />
                </div>
            </div>
        </div>
    </td>
