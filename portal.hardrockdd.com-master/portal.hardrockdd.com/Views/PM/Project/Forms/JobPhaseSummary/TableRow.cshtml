            </div>
            <input class="form-control percent" name="Ream4PercentComplete" type="text" value="@(string.Format("{0:P0}",Model.Ream4PercentComplete))" />
        </div>
    </td>
    <td style="width: 120px;">
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text">
                    <input type="checkbox" class=" js-switch" data-size="small" data-theme="green" name="IsReam5Complete" @(Model.IsReam5Complete ? "Checked" : "") />
