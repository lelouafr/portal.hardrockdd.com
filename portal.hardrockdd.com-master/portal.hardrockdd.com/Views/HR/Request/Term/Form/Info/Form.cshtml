@model portal.Models.Views.HR.Request.Term.TermRequestViewModel
@{
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var formLayout = new FormLayoutModel(this);
    var formId = string.Format("form_{0}", Guid.NewGuid());
    var id = formId.ToString().Replace("-", "");
}
<form class="form-horizontal"
      id="@formId"
      data-urlupdate="@Url.Action("TermUpdate", "HRTermRequestForm")"
      data-urlvalidate="@Url.Action("TermValidate", "HRTermRequestForm")">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.HRCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.HRRef, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.Status, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.RequestId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.HRComments, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.PRComments, new { @id = Guid.NewGuid() })

    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.EmployeeName, new { ViewOnly = true })
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.RequestedOn, new { ViewOnly = true })
        @Html.EditorFor(m => m.RequestedBy, new { ViewOnly = true })
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.TermCodeId)
        @Html.EditorFor(m => m.IsOpenRequest)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.Comments, new { ViewOnly = true })
    </div>
    @if (User.IsInPosition("HR-MGR") || User.IsInPosition("IT-DIR"))
    {
        <div class="form-group has-feedback row">
            @Html.EditorFor(m => m.HRComments)
        </div>
    }
    @if (User.IsInPosition("HR-PRMGR") || User.IsInPosition("HR-MGR") || User.IsInPosition("IT-DIR"))
    {
        <div class="form-group has-feedback row">
            @Html.EditorFor(m => m.PRComments)
        </div>
    }
</form>