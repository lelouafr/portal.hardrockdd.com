@model portal.Models.Views.HR.Resource.Form.ResourceADInfoViewModel
@{
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var formLayout = new FormLayoutModel(this);
    var formId = string.Format("form_{0}", Guid.NewGuid());
    var id = formId.ToString().Replace("-", "");
}

<form class="form-horizontal"
      autocomplete="off"
      id="@formId"
      data-urlupdate="@Url.Action("Update", "HRResourceADInfo")"
      data-urlvalidate="@Url.Action("Validate", "HRResourceADInfo")">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.HRCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.EmployeeId, new { @id = Guid.NewGuid() })

    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.IsDomainAccount)
        @Html.EditorFor(m => m.IsAccountActive)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.HasEmail)
        @Html.EditorFor(m => m.PortalActive)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.CompanyEmail)
        @if (Model.CanChangePassword)
        {
            @Html.EditorFor(m => m.ADPassword)
        }
    </div>
</form>