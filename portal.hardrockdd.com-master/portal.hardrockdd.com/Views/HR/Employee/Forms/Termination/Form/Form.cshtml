@model portal.Models.Views.PR.Employee.Form.PayrollTerminationViewModel
@{
    var formId = string.Format("form_{0}", Guid.NewGuid());
    var id = formId.ToString().Replace("-", "");
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
}

<form class="form-horizontal"
      id="@formId"
      data-url="@Url.Action("Termination","HREmployee")">
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Co, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.EmployeeId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.EmployeeId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.RequestedUser, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.RequestedUserEmail, new { @id = Guid.NewGuid() })

    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.EmployeeName, new { ViewOnly = true })
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.Date)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.TermReason)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.Notes)
    </div>
</form>

<script>
</script>
