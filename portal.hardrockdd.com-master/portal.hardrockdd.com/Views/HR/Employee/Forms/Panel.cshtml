@model portal.Models.Views.HR.Resource.Form.ResourceFormViewModel
@{
    var id = Guid.NewGuid().ToString().Replace("-", "");
    var panelId = string.Format("panel_{0}", Guid.NewGuid());
}
<div class="panel panel-inverse"
     data-reloadurl="@Url.Action("Form", "HRResourceForm", new { hrco = Model.HRCo, employeeId = Model.ResourceId })">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-url="@Url.Action("Panel","AuditLog")" data-click="panel-history" style="display:none"><i class="fas fa-history"></i></a>
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
        </div>
        <h4 class="panel-title">Employee (@Model.Info.FullName)</h4>
    </div>
    <div class="panel-body" id="@panelId">
        @Html.Partial("../HR/Employee/Forms/Form", Model)
    </div>
</div>
<script>
    $(document).ready(function () {
        initPane($('#@panelId'));
    });
</script>