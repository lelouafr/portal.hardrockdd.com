<table class="table "
       id="@tableId"
       data-reloadurl="@Url.Action("Table", ViewBag.DataController)"
       data-dataurl="@Url.Action(ViewBag.DataAction, ViewBag.DataController)"
       data-urlselect="@Url.Action("PartialIndex", "EquipmentForm")"
       @*data-statusid="@Model.StatusId"
       data-assignedstatus="@(Model.AssignedStatus == null ? "" : ((int)Model.AssignedStatus).ToString())"*@
       @*data-co="@((byte?)Model.Co)"
       data-jobid="@(Model.JobId)"
           *@
       data-dstselect="reviewPanel"
       data-dstselectvalidate="false"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th data-datatable-filter-type="none">@Html.LabelForRequired(model => model.List.FirstOrDefault().EMCo)</th>
            <th width="60px" data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().EquipmentId)</th>
            <th width="140px" data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().Description)</th>
            <th width="60px" data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().VINNumber)</th>
            <th width="60px" data-datatable-filter-type="multiselect">@Html.LabelForRequired(model => model.List.FirstOrDefault().CategoryId)</th>
            <th width="60px" data-datatable-filter-type="multiselect">@Html.LabelForRequired(model => model.List.FirstOrDefault().AssignedStatus)</th>
            <th width="140px" data-datatable-filter-type="multiselect">@Html.LabelForRequired(model => model.List.FirstOrDefault().AssignedTo)</th>
            <th width="140px" data-datatable-filter-type="multiselect">@Html.LabelForRequired(model => model.List.FirstOrDefault().Location)</th>
            <th width="60px" data-datatable-filter-type="multiselect" data-datatable-filter-value="Active">@Html.LabelForRequired(model => model.List.FirstOrDefault().Status)</th>
            <th width="140px" data-datatable-filter-type="multiselect">@Html.LabelForRequired(model => model.List.FirstOrDefault().CompanyName)</th>
            <th width="60px" data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().OdoReading)</th>
            <th width="60px" data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().HourReading)</th>
            <th width="60px" data-datatable-filter-type="input">@Html.LabelForRequired(model => model.List.FirstOrDefault().LicensePlateNo)</th>
            
            <th width="20px" data-datatable-filter-type="checkbox"><label><i class="fas fa-paperclip"></i></label></th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
    $('#@tableId').ready(function () {
        var panel = $("#@tableId").closest('.panel').first();
        var tableElem = $('#@tableId');
        //var h = $("body").height();
        //h -= $(panel).height();
        //h -= $(tableElem).find('thead').height();
        //h -= 125;

        //var h = tableHeight(tableElem, 100, 16.14);
        //h -= 25;
        var table = $('#@tableId').DataTable({
            dom: 'Bfrtip',
            orderCellsTop: true,
            paging: false,
            autoWidth: true,
            ordering: true,
            processing: true,
            scrollX: true,
            scrollY: 250,
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ],
            language: {
                loadingRecords: 'Loading....',
                processing: '<span class="spinner-small"></span>'
            },
            ajax: {
                url: $('#@tableId').data('dataurl'),
                data: function (d) {
                    //d.statusId =  $('#@tableId').attr('data-statusid');
                    //d.assignStatus =  $('#@tableId').attr('data-assignedstatus');
                    //d.co = $(table).attr('data-co');
                    //d.jobId = $(table).attr('data-jobid');
                },
                type: "GET",
                datatype: "json",
            },
            columns: [
                { data: "EMCo" },
                { data: "EquipmentId" },
                { data: "Description" },
                { data: "VINNumber" },
                { data: "Category" },
                { data: "AssignedStatusString" },
                { data: "AssignedTo" },
                { data: "Location" },
                { data: "Status" },
                { data: "CompanyName" },
                { data: "OdoReading" },
                { data: "HourReading" },
                //{ data: "ParentEquimentId" },
                { data: "LicensePlateNo"},
                { data: "HasAttachment" },
            ],
            columnDefs: [
                { targets: [0, 5, 10, 11], visible: false },
                { targets: [8], orderable: false },
                {
                    targets: [13],
                    createdCell: function (cell, cellData, rowData, rowIndex, colIndex) {
                        if (colIndex === 13) {
                            if (cellData === true) {
                                $(cell).html('<i class="fas fa-paperclip"></i>');
                            }
                            else {
                                $(cell).html(cellData);
                            }
                        }
                    }
                },
            ],
            fnInitComplete: function () {
                var dtButtons = $(panel).find('.dt-buttons');
                $(dtButtons).hide();
                $('#@(tableId)_filter').hide();
                Table().init($('#@tableId'));
            },
            createdRow: function (row, data, dataIndex) {
                var rowKey = "EMCo=" + data.EMCo + "&EquipmentId=" + data.EquipmentId;
                $(row).attr('data-entitykey', rowKey);
            }
        });

        $(panel).find('[data-click="panel-excel"]').on('click', function () {
            var panel = $("#@tableId").closest('.panel').first();
            var dtButtons = $(panel).find('.dt-buttons');
            var dtExcelBtn = $(dtButtons).find('.buttons-excel');
            console.log('clicked', dtExcelBtn);
            $(dtExcelBtn).click();
        });


    })


