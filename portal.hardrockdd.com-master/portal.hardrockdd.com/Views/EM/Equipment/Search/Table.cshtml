@model portal.Models.Views.Equipment.EquipmentListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";

}
<table class="table"
       id="@tableId"
       data-urlsearchreturn="@Url.Action("SearchReturn","EMCombo")"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().EMCo)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().EquipmentId)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Description)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().LicensePlateNo)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().VINNumber)</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<script>
    $(document).ready(function () {
        h = tableHeight($('#@tableId'), 100, 25.6);
        myTable = $('#@tableId').DataTable({
            paging: false,
            scrollY: 250,
            ordering: true,
            data: @Html.Raw(@Model.ListJSON),
            columns: [
                { data: "EMCo" },
                { data: "EquipmentId" },
                { data: "Description" },
                { data: "LicensePlateNo" },
                { data: "VINNumber" }],
            columnDefs: [
                { targets: [0], visible: false }],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
            createdRow: function (row, data, dataIndex) {
                var rowKey = "EMCo=" + data.EMCo + "&EquipmentId=" + data.EquipmentId;
                $(row).attr('data-entitykey', rowKey);
            }
        });
        setTimeout(function () {
            $('#@tableId').DataTable().columns.adjust().draw();
        }, 500);
    });
</script>