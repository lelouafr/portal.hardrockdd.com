@model portal.Models.Views.Equipment.Location.EquipmentLocationListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";

}
<table class="table"
       id="@tableId"
       data-urlsearchreturn="@Url.Action("SearchReturn","EquipmentLocation")"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().LocationId)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Description)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().EMCo)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model.List)
        {
            @Html.Partial("../EM/Location/Search/TableRow", request)
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        myTable = $('#@tableId').DataTable({
            autoWidth: false,
            paging: true,
            ordering: true,
            columnDefs: [
                { targets: [2], visible: false }
            ],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
        });
    });
</script>