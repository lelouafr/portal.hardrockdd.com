@model portal.Models.Views.DailyTicket.Equipment.DailyEquipmentUsageListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var tableLayout = new TableLayoutModel(this);
    string tableKey = tableLayout.TableKey;
}

<table class="table "
       id="@tableId"
       data-urlselect="@Url.Action("LinePanel", "DailyEquipmentUsage")"
       data-dstselect="LineFormPanel"
       data-dstselectvalidate="false"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th width="10%">@Html.LabelForRequired(model => model.List.FirstOrDefault().ActualDate)</th>
            <th width="50%">@Html.LabelForRequired(model => model.List.FirstOrDefault().JobId)</th>
            <th width="25%">@Html.LabelForRequired(model => model.List.FirstOrDefault().PhaseId)</th>
            <th width="10%">@Html.LabelForRequired(model => model.List.FirstOrDefault().RevWorkUnits)</th>
            <th width="10%">@Html.LabelForRequired(model => model.List.FirstOrDefault().RevDollars)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model.List)
        {
            @Html.Partial("../EM/EMUsage/Lines/TableRow", request)
        }
    </tbody>
</table>

<script>
    $('#@tableId').ready(function () {
        $('#@tableId').DataTable({
            rowsGroup: [0, 1],
            pageLength: 10,
            paging: false,
            searching: false,
            ordering: false,
            fnInitComplete: function () {
                Table().init($('#@tableId'));
                Table().selectFirstRow($('#@tableId'));
            },
        });
    });

</script>