@model portal.Models.Views.Equipment.Audit.EquipmentAuditCreateViewModel

<div class="row">
    <div class="col-6">
        @Html.Partial("../EM/Audit/Add/Form/Panel", Model)
    </div>
    <div class="col-6">
        @Html.Partial("../EM/Audit/Add/List/Panel", Model.EquipmentList)
    </div>
</div>
<hr />
<div class="pull-right">
    <a href="javascript:;" class="btn btn-white" data-dismiss="modal">Close</a>
    <a href="javascript:;"
       class="btn btn-success btnCreate">Create</a>
</div>

<script>    
    $('.btnCreate')
        .on('click', function () {
            //console.log('clicked');
            var button = this;
            var func = function (button, form) {
                $(button).SetButtonBusy();
                data = $(form).SerializeForm();
                url = $(form).data('urlcreate');
                //console.log(data, url);
                $.post(url, data, function (res) {
                    $(button).SetButtonNotBusy();
                    if (res.success === "true") {
                        window.location.href = res.url;
                    }
                });
            }
            var button = this;
            var modal = $(button).closest('.modal-body');
            var form = $(modal).find('form');
            console.log('validate Form');
            $(modal).PostValidate(button, function (valid) {
                if (valid) {
                    func(button, form);
                }
            });
    });
</script>