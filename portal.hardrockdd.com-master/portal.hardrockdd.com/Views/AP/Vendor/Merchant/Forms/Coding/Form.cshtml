@model portal.Models.Views.AP.Vendor.Merchant.Forms.MerchantCodingViewModel

@{
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var formLayout = new TableLayoutModel(this);
    var entityKey = formLayout.TableKey;
    var formId = string.Format("form_{0}", Guid.NewGuid());
}

<form class="form-horizontal"
      id="@formId"
      data-entitykey="@entityKey"
      data-urlupdate="@Url.Action("Update", "MerchantCoding")"
      data-urlvalidate="@Url.Action("Validate", "MerchantCoding")">
    @Html.AntiForgeryToken()
    <div class="form-group has-feedback">
        <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
        </div>
    </div>
    @Html.HiddenFor(m => m.VendGroupId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.PhaseGroupId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.EMCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.EMGroupId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.GLCo, new { @id = Guid.NewGuid() })

    @foreach (var prp in this.ViewData.ModelMetadata.Properties.Where(p => p.TemplateHint == "HiddenInput").Select(s => s.PropertyName))
    {
        @Html.Hidden(prp, Model.GetType().GetProperty(prp).GetValue(Model, null), new { @id = Guid.NewGuid() })
    }
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.IsAPRefRequired)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.IsReoccurring)
        @Html.EditorFor(m => m.IsReceiptRequired)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.DefaultJCPhaseId)
        @Html.EditorFor(m => m.DefaultJCCType)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.DefaultEMCostCodeId)
        @Html.EditorFor(m => m.DefaultEMCType)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.DefaultGLAcct)
    </div>
</form>
<script>
    $('#@formId').ready(function () { Form().init($('#@formId')); });
</script>
