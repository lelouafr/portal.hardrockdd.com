@model portal.Models.Views.AP.Vendor.Merchant.Forms.MerchantCategoryInfoViewModel
@{
    var id = Guid.NewGuid().ToString().Replace("-", "");
    var panelId = string.Format("panel_{0}", Guid.NewGuid());
}
<div class="panel panel-inverse"
     data-reloadurl="@Url.Action("Form", "MerchantCategoryInfo", new { vendGroupId = Model.VendGroupId, categoryGroup = Model.CategoryGroup, categoryCodeId = Model.CategoryCodeId })"
     data-initpane="initPane@(id)">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
        </div>
        <h4 class="panel-title">Info (@Model.CategoryCodeId)</h4>
    </div>
    <div class="panel-body" id="@panelId">
        @Html.Partial("../AP/Vendor/MerchantCategory/Forms/Info/Form", Model)
    </div>
</div>
<script>
    $(document).ready(function () {
        initPane@(id)();
    });

    function initPane@(id)() {
    }


</script>