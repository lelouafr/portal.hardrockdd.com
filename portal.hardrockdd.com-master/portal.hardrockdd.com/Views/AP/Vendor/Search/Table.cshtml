@model portal.Models.Views.Vendor.VendorListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";

}
<table class="table"
       id="@tableId"
       data-urlsearchreturn="@Url.Action("VendorSearchReturn","APCombo")"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().VendorGroupId)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().VendorId)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Name)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().DisplayName)</th>
            @*<th>@Html.LabelForRequired(model => model.List.FirstOrDefault().DisplayName)</th>*@
        </tr>
    </thead>
    <tbody>
        @*@foreach (var request in Model.List)
        {
            @Html.Partial("../Vendor/Search/TableRow", request)
        }*@
    </tbody>
</table>
<script>

     $(document).ready(function () {
         h = tableHeight($('#@tableId'), 100, 25.6);
         if (h >= 400) {
             h = 400;
         }
        myTable = $('#@tableId').DataTable({
            paging: false,
            scrollY: 250,
            ordering: true,
            data: @Html.Raw(@Model.ListJSON),
            columns: [
                { data: "VendorGroupId" },
                { data: "VendorId" },
                { data: "Name" },
                { data: "DisplayName" }],
            columnDefs: [
                { targets: [0], visible: false }],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
            createdRow: function (row, data, dataIndex) {
                var rowKey = "VendorGroupId=" + data.VendorGroupId + "&VendorId=" + data.VendorId;
                $(row).attr('data-entitykey', rowKey);
            }
        });
        setTimeout(function () {
            $('#@tableId').DataTable().columns.adjust().draw();
        }, 500);
    });
</script>