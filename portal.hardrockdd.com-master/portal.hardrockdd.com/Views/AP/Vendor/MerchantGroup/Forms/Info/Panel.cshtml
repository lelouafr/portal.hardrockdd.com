@model portal.Models.Views.AP.Vendor.Merchant.Forms.MerchantGroupInfoViewModel
@{
    var id = Guid.NewGuid().ToString().Replace("-", "");
    var panelId = string.Format("panel_{0}", Guid.NewGuid());
}
<div class="panel panel-inverse"
     data-reloadurl="@Url.Action("Form", "MerchantGroupInfo", new { vendGroupId = Model.VendGroupId, categoryGroup = Model.CategoryGroup })"
     >
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
        </div>
        <h4 class="panel-title">Info (@Model.CategoryGroup)</h4>
    </div>
    <div class="panel-body" id="@panelId">
        @Html.Partial("../AP/Vendor/MerchantGroup/Forms/Info/Form", Model)
    </div>
</div>