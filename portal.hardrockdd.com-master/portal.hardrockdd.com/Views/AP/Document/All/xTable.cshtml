@model portal.Models.Views.AP.Document.vDocumentListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = "apDocumentTable";
    var tableLayout = new TableLayoutModel(this);
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = tableLayout.TableKey;
}

<table class="table"
       id="@tableId"
       data-urldelete="@Url.Action("Delete", "APDocument")"
       data-urlselect="@Url.Action("Form", "APDocument")"
       data-dataurl="@Url.Action("Data", "APDocument", new { status = (int)Model.Status })"
       data-dstselect="reviewPanel"
       data-dstselectvalidate="false"*@
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Vendor)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Status)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().APReference)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Amount)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Mth)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().InvoiceDate)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.List)
        {
            @Html.Partial("../AP/Document/All/TableRow", row)
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#@tableId').DataTable({
            autoWidth: true,
            paging: true,
            pageLength: 25,
            ordering: true,
            processing: true,
            pageResize: true,
            rowsGroup: [0],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
            pagingType: "simple_numbers",
            order: [
                [0, "asc"]
            ],
        });
    });
</script>