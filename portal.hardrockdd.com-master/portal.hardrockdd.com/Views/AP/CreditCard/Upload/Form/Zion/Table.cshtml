@model portal.Models.Views.AP.CreditCard.Import.ZionImportLinesViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var tableLayout = new TableLayoutModel(this);
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = tableLayout.TableKey;
    tableKey += "|";
}

<table class="table"
       id="@tableId"
       @*data-urldelete="@Url.Action("Delete", "APDocument")"
       data-urlselect="@Url.Action("Form", "APDocument")"
       data-dataurl="@Url.Action("Data", "APDocument", new { status = (int)Model.Status })"
       data-dstselect="reviewPanel"
       data-dstselectvalidate="false"
           *@
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().ImportLineId)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransactionReference)</th>
            <th style="min-width:250px;">@Html.LabelForRequired(model => model.List.FirstOrDefault().TransactionDescription)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().PREmployeeId)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().CardEmployeeId)</th>
            <th style="min-width:100px;">@Html.LabelForRequired(model => model.List.FirstOrDefault().EmployeeFirstName)</th>
            <th style="min-width:100px;">@Html.LabelForRequired(model => model.List.FirstOrDefault().EmployeeLastName)</th>
            <th style="min-width:250px;">@Html.LabelForRequired(model => model.List.FirstOrDefault().EmployeeEmail)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransLineNumber)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransPostDate)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransDate)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransBillingAmount)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransLineAmount)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransLineTaxAmount)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantId)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantName)</th>
            <th style="min-width:250px;">@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantAddress)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantCity)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantState)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantZip)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantCountry)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantCategoryCode)</th>
            <th style="min-width:250px;">@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantCategoryCodeDescription)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantCategoryGroup)</th>
            <th style="min-width:250px;">@Html.LabelForRequired(model => model.List.FirstOrDefault().MerchantCategoryGroupDescription)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransactionLineItemDescription)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransactionLineItemTotal)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransactionLineItemProductCode)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransactionLineItemQuantity)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransactionLineItemUnitofMeasure)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().TransactionLineItemUnitPrice)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().IsError)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model.List)
        {
            @Html.Partial("../AP/CreditCard/Upload/Form/Zion/TableRow", row)
        }
    </tbody>
</table>
<script>

    $('#@tableId').ready(function () {
        //var h = tableHeight($("#@tableId"), @(Model.List.Count),30.4);
        $('#@tableId').DataTable({
            autoWidth: true,
            paging: false,
            scrollX: true,
            scrollY: 250,
            ordering: true,
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
        });
    });
</script>