@model  portal.Models.Views.AP.Invoice.InvoiceLineListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var tableLayout = new TableLayoutModel(this);
    string tableKey = tableLayout.TableKey;
}

<table class="table"
       id="@tableId"
       data-urlselect="@Url.Action("LinePanel", "APInvoice")"
       data-dstselect="arInvoiceLinePanel"
       data-dstselectvalidate="false"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th width="5%"><label>#</label></th>
            <th width="10%">@Html.LabelForRequired(model => model.List.FirstOrDefault().LineTypeId)</th>
            <th width="50%"><label>Job/Equipment</label></th>
            <th width="10%">@Html.LabelForRequired(model => model.List.FirstOrDefault().GrossAmt)</th>
            @if (!viewOnly)
            {
            <th>
                <button class="btn btn-primary addRow pull-right">
                    <i class="fa fa-plus"></i>
                </button>
            </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var line in Model.List)
        {
            @Html.Partial("../AP/Invoice/Lines/TableRow", line)
        }
    </tbody>
</table>

<script>
    $('#@tableId').ready(function () {
        var firstRow = $('#@tableId').find('tbody').find('tr:first');
        setTimeout(function () {
            $(firstRow).click();
        }, 500);
        var rcdCnt = @(Model.List.Count);
        if (rcdCnt > 20)
        {
            var table = $('#@tableId').DataTable({
                autoWidth: false,
                paging: true,
                pageLength: 10,
                'language': {
                        'loadingRecords': 'Loading....',
                    'processing': '<span class="spinner-small"></span>'
                },
                columnDefs: [
                    { targets: [ 4], orderable: false },
                    ]
            });
        }
	    Table().init($('#@tableId'));
    });
</script>