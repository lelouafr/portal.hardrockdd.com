@*@model portal.Models.Views.Purchase.Order.PurchaseOrderStatusLogViewModel
@{
    var tableLayout = new TableLayoutModel(this);
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var entityKey = "";
    foreach (var prp in tableLayout.Properties)
    {
        if (prp.IsKey)
        {
            var myData = Model.GetType().GetProperty(prp.Property);
            var myVal = myData.GetValue(Model, null);
            if (rowKey != string.Empty)
            {
                rowKey += "&";
            }
            rowKey += prp.Property + "=" + myVal.ToString();
        }
    }
    var classStr = "";
    if (Model.Status == PurchaseOrderStatusEnum.Rejected)
    {
        classStr = "text-red-darker font-weight-bold";
    }
}
<tr data-index="@Model.LineNum" data-entitykey="@entityKey">
    <td class="@classStr">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Co, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.PO, new { @id = Guid.NewGuid() })
        @Html.HiddenFor(m => m.LineNum, new { @id = Guid.NewGuid() })
        @Html.EditorFor(m => m.CreatedOn, new { DisplayOnly = true })
    </td>
    <td class="@classStr">
        @Html.EditorFor(m => m.CreatedUser, new { DisplayOnly = true })
    </td>
    <td class="@classStr">
        @Html.EditorFor(m => m.Status, new { DisplayOnly = true })
    </td>
</tr>
@if (!string.IsNullOrEmpty(Model.Comments))
{
    <tr data-index="@Model.LineNum" data-entitykey="@entityKey">

        <td style="border-top-width: 0px; padding-top: 0px;">
        </td>
        <td colspan="2" style="border-top-width: 0px; padding-top: 0px;">
            <p style="margin-bottom: 0px;" class="@classStr">
                @Model.Comments
            </p>
        </td>
    </tr>
}*@