    User.IsInPosition("IT-DIR") ||
    User.IsInPosition("HR_MGR") ||
    User.IsInPosition("HR_PRMGR") ||
    User.IsInPosition("CFO") || 
    User.HasAccess("PositionRequest", "AllIndex")
