                <h4 class="card-title m-t-5 m-b-10">Position Request</h4>
                <p class="card-text m-b-15">Request new position @*/ term.*@</p>
                @*<button class="btn btn-sm btn-danger termRequest" data-toggle="modal" data-target="#termination">
                    Term Request
                </button>*@
                <button class="btn btn-sm btn-primary addPositionRequest" data-toggle="modal" data-target="#position">
