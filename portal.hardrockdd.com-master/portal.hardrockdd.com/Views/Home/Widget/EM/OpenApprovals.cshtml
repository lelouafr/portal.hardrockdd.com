@model portal.Models.Views.Dashboard.HomeViewModel
@if (Model.EMAuditApprovalCount > 0 && User.HasAccess("EMAudit"))
{
    <div class="col-xl-2 col-lg-3 col-md-4">
        <div class="widget widget-stats bg-gradient-blue">
            <div class="stats-icon"><i class="fas fa-clipboard-list"></i></div>
            <div class="stats-info">
                <h4>Equipment Audits Pending Approval(s)</h4>
                <p>@Model.EMAuditApprovalCount</p>
            </div>
            <div class="stats-link">
                <a href="@Url.Action("ApprovalIndex", "EMAudit")">Goto Review <i class="fa fa-arrow-alt-circle-right"></i></a>
            </div>
        </div>
    </div>
}