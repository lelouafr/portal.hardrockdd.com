@model portal.Models.Views.Dashboard.HomeViewModel
@if (Model.UnAssignedEquipmentCnt > 0 && User.HasAccess("Equipment"))
{
    <div class="col-xl-2 col-lg-3 col-md-4">
        <div class="widget widget-stats bg-red">
            <div class="stats-icon"><i class="fas fa-clipboard-list"></i></div>
            <div class="stats-info">
                <h4>UnAssigned Equipment</h4>
                <p>@Model.UnAssignedEquipmentCnt</p>
            </div>
            <div class="stats-link">
                <a href="@Url.Action("Index", "Equipment")">Goto Review <i class="fa fa-arrow-alt-circle-right"></i></a>
            </div>
        </div>
    </div>
}