@model portal.Models.Views.Dashboard.HomeViewModel
@if (Model.EMServiceRequestLineCount > 0 )
{
    <div class="col-xl-2 col-lg-3 col-md-4">
        <div class="widget widget-stats bg-gradient-silver">
            <div class="stats-icon"><i class="fas fa-tools"></i></div>
            <div class="stats-info text-black">
                <h4 class="text-black">Equipment Open Service Request(s) </h4>
                <p>@Model.EMServiceRequestLineCount</p>
            </div>
            <div class="stats-link">
                <a href="@Url.Action("ServiceEquipmentRequestListIndex", "ServiceRequest")">Goto Review <i class="fa fa-arrow-alt-circle-right"></i></a>
            </div>
        </div>
    </div>
}