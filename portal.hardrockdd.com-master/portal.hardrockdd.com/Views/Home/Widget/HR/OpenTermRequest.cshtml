@model portal.Models.Views.Dashboard.HomeViewModel
@if (Model.HRTermRequestCount > 0)
{
    <div class="col-xl-2 col-lg-3 col-md-4">
        <div class="widget widget-stats bg-red-transparent-7">
            <div class="stats-icon"><i class="fas fa-clipboard-list"></i></div>
            <div class="stats-info">
                <h4>Open Term Request(s)</h4>
                <p>@Model.HRTermRequestCount</p>
            </div>
            <div class="stats-link">
                <a href="@Url.Action("UserIndex", "TermRequest", new { Area = "HumanResources" })">Goto Review <i class="fa fa-arrow-alt-circle-right"></i></a>
            </div>
        </div>
    </div>
}