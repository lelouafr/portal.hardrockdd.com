@model portal.Models.Views.Dashboard.HomeViewModel
@if (Model.HRPositionRequestCount > 0)
{
    <div class="col-xl-2 col-lg-3 col-md-4">
        <div class="widget widget-stats bg-green-transparent-3">
            <div class="stats-icon"><i class="fas fa-clipboard-list"></i></div>
            <div class="stats-info">
                <h4>Open Positions Request(s)</h4>
                <p>@Model.HRPositionRequestCount</p>
            </div>
            <div class="stats-link">
                <a href="@Url.Action("UserIndex", "PositionRequest", routeValues: new { Area = "HumanResource" })">Goto Review <i class="fa fa-arrow-alt-circle-right"></i></a>
            </div>
        </div>
    </div>
}