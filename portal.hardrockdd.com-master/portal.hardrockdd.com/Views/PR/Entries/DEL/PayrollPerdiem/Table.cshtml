@model portal.Models.Views.Payroll.PayrollEmployeeReviewListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";
}
<table class="table"
       id="@tableId"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th width="15%"><label>Job/Equipment</label></th>
            @foreach (var DayofWeek in Model.CalendarList)
            {
                <th width="12%">
                    <label>@DayofWeek.WeekDayName</label>
                    <label>@DayofWeek.Date.ToShortDateString()</label>
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var perdiem in Model.PerdiemList.GroupBy(g => new { g.JobId, g.EquipmentId })
                                                  .Select(s => new { 
                                                      JobEquip = s.Key.JobId ?? s.Key.EquipmentId,
                                                      List = s
                                                  })
                                                  .ToList())
        {
            <tr>
                <td>@perdiem.JobEquip</td>
                 @foreach (var caledar in Model.CalendarList)
                 {
                     var sublist = perdiem.List.Where(f => f.WorkDate == caledar.Date).ToList();
                     <td>
                         @foreach (var perdeimItem in sublist)
                         {
                             @Html.Partial("../PayrollPerdiem/TableCell", perdeimItem)
                         }
                     </td>
                 }
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#@tableId').DataTable({
            autoWidth: true,
            "order": [],
            "searching": false,
            "paging": false,
            "ordering": false
        });
    });
</script>