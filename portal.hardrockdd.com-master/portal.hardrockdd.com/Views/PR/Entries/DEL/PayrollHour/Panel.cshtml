@model portal.Models.Views.Payroll.PayrollEmployeeReviewListViewModel
@{
    var id = Guid.NewGuid().ToString().Replace("-", "");
}
<div class="panel panel-inverse" 
     data-reloadurl="@Url.Action("Table", "PayrollHour", new { Co = Model.Co, EmployeeId = Model.EmployeeId, WeekId = Model.WeekId })">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
            
        </div>
        <h4 class="panel-title">Hour Summary</h4>
    </div>
    <div class="panel-body" id="PayrollEmployeeHoursReviewList">
        @Html.Partial("../PayrollHour/Table", Model)
    </div>
</div>

<script>

    $(document).ready(function () {
        initPane@(id)();
    });

    function initPane@(id)() {
        handleEntryTypeChange();
        var table = $('#PayrollEmployeeHoursReviewList').find('table');
        $(table).find('tr').each(function () {
            handleEntryTypeView(this);
        });
        initPane($('#PayrollEmployeeHoursReviewList'));
    }

    function handleEntryTypeView(rowElem) {
        
        var entryType = $(rowElem).find('select.EntryTypeId').val();
        var jobSelect = $(rowElem).find('.selectJobId');
        var equipSelect = $(rowElem).find('.selectEquipmentId');
        var taskSelect = $(rowElem).find('.selectPhaseId');
        jobSelect.hide();
        equipSelect.hide();
        taskSelect.hide();
       //console.log(rowElem, entryType, jobSelect, equipSelect);

        switch (entryType) {
            case "@(((short)DB.EntryTypeEnum.Job))":
                equipSelect.hide();
                jobSelect.show();
                //taskSelect.show();
                break;
            case "@(((short)DB.EntryTypeEnum.Equipment))":
                equipSelect.show();
                jobSelect.hide();
                break;
            case "@(((short)DB.EntryTypeEnum.Admin))":
                equipSelect.hide();
                jobSelect.hide();
                break;
            default:
                break;
        }
    }
    function handleEntryTypeChange() {
        $('#DailyEmployeeListViewModel').on('change', '.EntryTypeId', function () {
            //console.log('EntryTypeId');
            var row = $(this).closest('tr');
            handleEntryTypeView(row);
        });
    }

</script>