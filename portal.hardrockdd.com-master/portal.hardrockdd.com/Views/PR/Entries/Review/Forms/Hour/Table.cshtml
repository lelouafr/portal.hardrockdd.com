@model portal.Models.Views.Payroll.PayrollEmployeeHourListViewModel
@{
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    string tableKey = "";
    ViewBag.TableRow = "True";
}
<table class="table"
       id="@tableId"
       data-urlupdate="@Url.Action("Update", "PayrollHour")"
       data-urlvalidate="@Url.Action("Validate", "PayrollHour")"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th width="10%"><label>Date</label></th>
            <th width="10%"><label>Day</label></th>
            <th width="14%"><label>EarnCode</label></th>
            <th width="10%"><label>Type</label></th>
            <th width="28%"><label>Job/Equipment</label></th>
            <th width="15%"><label>Task</label></th>
            <th width="8%"><label>Hours</label></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.List)
        {
            @Html.Partial("../PR/Entries/Review/Forms/Hour/TableRow", entry);
        }
    </tbody>
</table>
<script>
    $('#@tableId').ready(function () {
        $('#@tableId').DataTable({
            rowsGroup: [0, 1],
            ordering: false,
            paging: false,
            searching: false,
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
        });
    });
   $('#@tableId').on('click', 'button.commentRowBtn', function () {
        var lineNum = $(this).data('linenum');
        var commentElem = $('#@tableId').find('#commentRow_' + lineNum);
        commentElem.show();
        $(this).hide();
    });
</script>