@model portal.Models.TableViewModel
@{ 
    var lengthName = Model.TableId + "_length";
    var lengthID = Model.TableId + "_length";
    var searchId = Model.TableId + "_filter";
}
<div class="row">
    <div class="col-sm-6">
        <div class="dataTables_length">
            <label>
                Show
                <select name="@lengthName" id="@lengthName" aria-controls="@Model.TableId" class="form-control input-sm" data-currentpage="@Model.CurrentPage">
                    <option @(Model.PageSize == 10 ? "selected" :"") value="10">10</option>
                    <option @(Model.PageSize == 25 ? "selected" :"") value="25">25</option>
                    <option @(Model.PageSize == 50 ? "selected" :"") value="50">50</option>
                    <option @(Model.PageSize == 100 ? "selected" :"") value="100">100</option>
                </select> entries
            </label>
        </div>
    </div>
    <div class="col-sm-6">
        <div  class="dataTables_filter">
            <label>Search:<input type="search" id="@searchId" class="form-control input-sm" placeholder="" aria-controls="@Model.TableId" data-currentpage="@Model.CurrentPage"value="@Model.SearchString"></label>
        </div>
    </div>
</div>
