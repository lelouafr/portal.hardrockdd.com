@using portal
@{
    var listItemId = 1;
    var listItemTag = "pm";
}
@if (   User.HasAccess("Job") ||
        User.HasAccess("Locate") ||
        User.HasAccess("Bid")
    )
{
<li id="menu_li_@(listItemTag)_@(listItemId++)" class="has-sub">
    <a href="javascript:;">
        <b class="caret"></b>
        <i class="fas fa-briefcase"></i>
        <span>Projects</span>
    </a>
    <ul class="sub-menu">
        @Html.Partial("../Shared/Sidebar/MenuItems/PM/PM_Job")
        @Html.Partial("../Shared/Sidebar/MenuItems/PM/PM_Bid")
        @Html.Partial("../Shared/Sidebar/MenuItems/PM/PM_Locate")
        @Html.Partial("../Shared/Sidebar/MenuItems/PM/PM_Setup")
    </ul>
</li>
}