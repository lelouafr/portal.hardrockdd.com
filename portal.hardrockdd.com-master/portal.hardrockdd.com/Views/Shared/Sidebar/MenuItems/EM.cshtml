                <li id="menu_li_@(listItemTag)_@(listItemId++)" class="has-sub">
                    <a href="javascript:;">
                        <b class="caret"></b>
                        <span>Work Orders</span>
                    </a>
                    <ul class="sub-menu">
                        <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("WorkOrderIndex", "EMWorkOrder", new { Area = "" })">Work Order(s)</a></li>
