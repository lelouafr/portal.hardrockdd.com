
@{
    var listItemId = 1;
    var listItemTag = "ep";
}


@if (User.HasAccess("WeeklyEmployeeSummary") ||
     User.HasAccess("APCreditCardEmployeeTransaction") ||
     User.HasAccess("PayrollHousing") ||
     User.HasAccess("LeaveRequestUserList") ||
     User.HasAccess("LeaveRequestList"))
{
    <li id="menu_li_@(listItemTag)_@(listItemId++)" class="has-sub ">
        <a href="javascript:;">
            <b class="caret"></b>
            <i class="fas fa-user"></i>
            <span>Employee</span>
        </a>
        <ul class="sub-menu">
            <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "WeeklyEmployeeSummary", routeValues: new { Area = "" })">Your Hours</a></li>
            @if (User.HasAccess("HRUserEmployee", "Index"))
            {
                <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "HRUserEmployee", routeValues: new { Area = "" })">Your Employees/Crew</a></li>
            }
            @if (User.HasAccess("Equipment", "UserIndex"))
            {
                <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("UserIndex", "Equipment", routeValues: new { Area = "" })">Your Equipment</a></li>
            }
            <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="https://www.paycomonline.net/v4/ee/web.php/app/login" target="_blank">Paycom (Link)</a></li>
            <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="https://www.bcbstx.com/" target="_blank">BlueCross BlueShield (Link)</a></li>
            
            @if (User.HasAccess("PayrollHousing"))
            {
                <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "PayrollHousing", routeValues: new { Area = "" })">Employee Housing</a></li>
            }
            @if (User.HasAccess("APCreditCardEmployeeTransaction") ||
                 User.HasAccess("APCreditCardSupervisorTransaction"))
            {
                <li id="menu_li_@(listItemTag)_@(listItemId++)" class="has-sub">
                    <a href="javascript:;">
                        <b class="caret"></b>
                        <span>Credit Card</span>
                    </a>
                    <ul class="sub-menu">
                        @if (User.HasAccess("APCreditCardEmployeeTransaction"))
                        {
                            <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "APCreditCardEmployeeTransaction", routeValues: new { Area = "" })">Your Transactions</a></li>
                        }
                        @if (User.HasAccess("APCreditCardSupervisorTransaction"))
                        {
                            <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "APCreditCardSupervisorTransaction", routeValues: new { Area = "" })">Employee(s) Transactions</a></li>
                        }
                    </ul>
                </li>
            }
            <li id="menu_li_@(listItemTag)_@(listItemId++)" class="has-sub ">
                <a href="javascript:;">
                    <b class="caret"></b>
                    <span>Time off</span>
                </a>
                <ul class="sub-menu">
                    <li id="menu_li_@(listItemTag)_@(listItemId++)" class=""><a href="@Url.Action("Index", "LeaveRequestUserList", routeValues: new { Area = "" })">Your Time off Request</a></li>
                    @if (User.HasAccess("LeaveRequestList"))
                    {
                        <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "LeaveRequestList", routeValues: new { Area = "" })">All Time off Request</a></li>
                    }
                </ul>
            </li>
        </ul>
    </li>
}