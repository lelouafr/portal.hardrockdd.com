@using portal
@{
    var listItemId = 1;
    var listItemTag = "ar";
}
@if (User.HasAccess("Customer") )
{
    <li id="menu_li_@(listItemTag)_@(listItemId++)" class="has-sub">
        <a href="javascript:;">
            <b class="caret"></b>
            <i class="fas fa-money-bill"></i>
            <span>Accounts Receivable</span>
        </a>
        <ul class="sub-menu">
            @if (User.HasAccess("Customer", "Index"))
            {
                <li id="menu_li_ap_@(listItemId++)" class="has-sub">
                    <a href="javascript:;">
                        <b class="caret"></b>
                        <span>Customer</span>
                    </a>
                    <ul class="sub-menu">
                        <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "Customer", routeValues: new { Area = "" })">Customer List</a></li>
                        <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "CustomerAging", routeValues: new { Area = "" })">Customer Aging</a></li>
                    </ul>
                </li>
            }
        </ul>
    </li>
}