@using portal
@{
    var listItemId = 1;
    var listItemTag = "ap";
}
@if (   User.HasAccess("APCreditCardAdministrationTransaction") ||
        User.HasAccess("APCreditCardImport") ||
        User.HasAccess("APInvoice") ||
        User.HasAccess("APDocument") ||
        User.HasAccess("Merchant") ||
        User.HasAccess("Vendor"))
    {
    <li id="menu_li_@(listItemTag)_@(listItemId++)" class="has-sub">
        <a href="javascript:;">
            <b class="caret"></b>
            <i class="fas fa-file-invoice"></i>
            <span>Accounts Payable</span>
        </a>
        <ul class="sub-menu">
            @Html.Partial("../Shared/Sidebar/MenuItems/AP/AP_Vendor")
            @Html.Partial("../Shared/Sidebar/MenuItems/AP/AP_CreditCard")
            @Html.Partial("../Shared/Sidebar/MenuItems/AP/AP_Payment")
            @Html.Partial("../Shared/Sidebar/MenuItems/AP/AP_Invoice")
            @*@Html.Partial("../Shared/Sidebar/MenuItems/AP/AP_Document")*@
            @Html.Partial("../Shared/Sidebar/MenuItems/AP/AP_Document2")
        </ul>
    </li>
}