
@{
    var listItemId = 1;
    var listItemTag = "pr";
}
@if (User.HasAccess("PayrollReview") ||
    User.HasAccess("PayrollHousing"))
{
    <li id="menu_li_@(listItemTag)_@(listItemId++)" class="has-sub">
        <a href="javascript:;">
            <b class="caret"></b>
            @*<i class="fas fa-dollar-sign"></i>*@
            <i class="far fa-hand-holding-usd"></i>
            <span>Payroll</span>
        </a>
        <ul class="sub-menu">
            @if (User.HasAccess("PayrollReview"))
            {
                <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "PayrollReview", routeValues: new { Area = "" })">Employee Entries</a></li>
                <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("BatchSourceListIndex", "Batch", new { Area = "", source = "PR Entry"})">Batches</a></li>
            }
            @if (User.HasAccess("PayrollHousing"))
            {
                <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "PayrollHousing", routeValues: new { Area = "" })"> Employee Housing </a></li>
            }
            @if (User.HasAccess("PRPayrate"))
            {
                <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "PRPayrate", routeValues: new { Area = "" })">Active Payroll Report</a></li>
            }
            <li id="menu_li_@(listItemTag)_@(listItemId++)"><a href="@Url.Action("Index", "Crew", routeValues: new { Area = "Payroll" })">Crews</a></li>
        </ul>
    </li>
}