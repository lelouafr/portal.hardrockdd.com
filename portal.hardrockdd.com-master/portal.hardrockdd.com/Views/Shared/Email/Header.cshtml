<table class="row header">
    <tr>
        <td class="center" align="center">
            <center>
                <!-- begin container -->
                <table class="container">
                    <tr>
                        <td class="wrapper">
                            <!-- begin six columns -->
                            <table class="six columns">
                                <tr>
                                    <td>
                                        <a href='@Url.Action("Index","Home", null, this.Request.Url.Scheme)'><img src="https://@(Request.Url.Authority)/Content/assets/img/logo/hardrock-logo.png" height="20" style="width: 40px;height: 20px;" /> <b>HardRock</b> portal</a>
                                    </td>
                                    <td class="expander"></td>
                                </tr>
                            </table>
                            <!-- end six columns -->
                        </td>
                        <td class="wrapper">
                            <!-- begin six columns -->
                            <table class="six columns">
                                <tr>
                                    <td class="text-right valign-middle">
                                        <span class="template-label">@ViewBag.Title</span>
                                    </td>
                                    <td class="expander"></td>
                                </tr>
                            </table>
                            <!-- end six columns -->
                        </td>
                    </tr>
                </table>
                <!-- end container -->
            </center>
        </td>
    </tr>
