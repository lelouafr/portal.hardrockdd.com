@model portal.Models.Views.Purchase.Request.PORequestViewModel

@{
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    var formLayout = new TableLayoutModel(this);
    var entityKey = formLayout.TableKey;
    var formId = string.Format("form_{0}", Guid.NewGuid());
    var id = formId.ToString().Replace("-", "");
}

<form class="form-horizontal"
      id="@formId"
      data-entitykey="@entityKey"
      data-urlcreate="@Url.Action("Add", "PORequest")"
      data-urldelete="@Url.Action("Delete", "PORequest")"
      data-urlupdate="@Url.Action("Update", "PORequest")"
      data-urlvalidate="@Url.Action("Validate", "PORequest")"
      data-postupdate="PostUpdate@(id)">
    @Html.AntiForgeryToken()
    <div class="row justify-content-md-center">
        <div class=" col-xl-8 ">
            <div class="form-group has-feedback">
                <div class="validation-summary-valid text-danger" data-valmsg-summary="true">
                </div>
            </div>
        </div>
    </div>
    @Html.HiddenFor(m => m.POCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.PRCo, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.VendorGroupId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.EmployeeId, new { @id = Guid.NewGuid() })
    @Html.HiddenFor(m => m.RequestId, new { @id = Guid.NewGuid() })

    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.OrderedDate)
        @Html.EditorFor(m => m.PO)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.Description)
    </div>
    <div class="form-group has-feedback row">
        @Html.EditorFor(m => m.VendorId)
    </div>
    <div class="vendGroup" style="display: none;">
        <div class="form-group has-feedback row">
            @Html.EditorFor(m => m.NewVendorName)
            @Html.EditorFor(m => m.NewVendorPhone)
        </div>
        <div class="form-group has-feedback row">
            @Html.EditorFor(m => m.NewVendorAddress)
        </div>
    </div>
</form>

<script>
    $('#@formId').ready(function () { Form().init($('#@formId')); });
    function PostUpdate@(id)(elem) {
        if ($(elem).attr('name') == "VendorId") {
            console.log('Post Update');
            handleVendView($('#@formId'));
            $('#PORequestLineViewModel').find('[data-click="panel-reload"]').click()
        }
    }
</script>
