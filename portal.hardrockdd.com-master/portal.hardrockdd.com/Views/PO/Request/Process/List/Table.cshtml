@model portal.Models.Views.Purchase.Request.PORequestSummaryListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";

}
<table class="table"
       id="@tableId"
       data-urlselect="@Url.Action("PartialIndex", "PORequest")"
       data-dstselect="reviewPanel"
       data-dstselectvalidate="true"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Status)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().VendorName)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().PO)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().Cost)</th>
            <th>@Html.LabelForRequired(model => model.List.FirstOrDefault().CreatedUser)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var request in Model.List)
        {
            @Html.Partial("../PO/Request/Process/List/TableRow", request)
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#@tableId').DataTable({
            autoWidth: true,
            'order': [
                [2, "desc"]
            ],
            "columnDefs": [
                { "targets": 5, "orderable": false }
            ],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
        });
    });


