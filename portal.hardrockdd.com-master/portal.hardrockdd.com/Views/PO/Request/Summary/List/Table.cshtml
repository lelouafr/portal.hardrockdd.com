@model portal.Models.Views.Purchase.Request.PORequestSummaryListViewModel
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";

}
<table class="table"
       id="@tableId"
       data-urlselect="@Url.Action("PartialIndex", "PORequest")"
       data-urlcreate="@Url.Action("Add", "PORequest")"
       data-dataurl="@Url.Action(ViewBag.Data, ViewBag.Controller)"
       data-dstselect="reviewPanel"
       data-dstselectvalidate="false"
       data-tablekey="@tableKey">
    <thead>
        <tr>
            <th data-datatable-filter-type="none">@Html.LabelFor(model => model.List.FirstOrDefault().POCo)</th>
            <th data-datatable-filter-type="none">@Html.LabelFor(model => model.List.FirstOrDefault().RequestId)</th>
            <th data-datatable-filter-type="multiselect" data-datatable-filter-value="Open|Processed|Approved|Submitted|Rejected">@Html.LabelFor(model => model.List.FirstOrDefault().Status)</th>
            <th data-datatable-filter-type="daterange">@Html.LabelFor(model => model.List.FirstOrDefault().OrderedDate)</th>
            <th data-datatable-filter-type="multiselect" class="hidden-xs hidden-sm">@Html.LabelFor(model => model.List.FirstOrDefault().VendorName)</th>
            <th data-datatable-filter-type="input">@Html.LabelFor(model => model.List.FirstOrDefault().PO)</th>
            <th data-datatable-filter-type="input" class="hidden-xs hidden-sm">@Html.LabelFor(model => model.List.FirstOrDefault().Description)</th>
            <th data-datatable-filter-type="input">@Html.LabelFor(model => model.List.FirstOrDefault().Cost)</th>
            <th data-datatable-filter-type="multiselect" class="hidden-xs hidden-sm">@Html.LabelFor(model => model.List.FirstOrDefault().CreatedUser)</th>
            <th>
                @*<button class="btn btn-primary addRow pull-right">
                    <i class="fa fa-plus"></i>
                </button>*@
            </th>
        </tr>
    </thead>
    <tbody>
        @*@foreach (var request in Model.List)
            {
                @Html.Partial("../PO/Request/Summary/List/TableRow", request)
            }*@
    </tbody>
</table>
<script>
    $(document).ready(function () {
        //var h = tableHeight($("#@tableId"), 100, 25.6) - 75;
        $('#@tableId').DataTable({
            autoWidth: true,
            pageLength: 100,
            paging: true,
            ordering: true,
            processing: true,
            scrollY: 250,
            scrollX: false,
            'language': {
                'loadingRecords': 'Loading....',
                'processing': '<span class="spinner-small"></span>'
            },
            ajax: {
                "url": $('#@tableId').data('dataurl'),
                "type": "GET",
                "datatype": "json",
            },
            order: [[3, "desc"]],
            columns: [
                 { data: "POCo", visible: false },
                 { data: "RequestId", visible: false },
                 {
                    data: "StatusString",
                    render: function (data, type, row, meta) {
                        var result = '<span class="label ' + row.StatusClass + '">' + data + '</span>';
                        return result;
                    },
                 },
                 {
                     data: "OrderedDate",
                     render: function (data, type) {
                         if (data === null) {
                             return null;
                         }
                         var date = data;
                         return type === 'sort' ? moment(date).format("YYYY-MM-DD") : moment(date).format('L');
                     },
                 },
                 {
                    data: "VendorName",
                    render: function (data, type) {
                        if (data === null) {
                            data = '';
                        }
                        var result = '<div class="f-s-9">' + data + '</div>';
                        return result;
                    },
                },
                { data: "PO" },
                {
                    data: "Description",
                    render: function (data, type) {
                        if (data === null) {
                            data = '';
                        }
                        var result = '<div class="f-s-9">' + data + '</div>';
                        return result;
                    },
                 },
                 {
                     data: "Cost",
                     render: function (data, type) {
                         return type === 'sort' ? data : currencyFormat(data, 2);
                     },
                     className: "text-right",
                 },
                {
                    data: "CreatedUser.FullName",
                    render: function (data, type, row, meta) {
                        var result = '';
                        var value = '';
                        if (row.CreatedUser != null) {
                            value = row.CreatedUser.FullName;
                        }
                        if ("@ViewBag.Controller" != "UserPORequest") {
                            result = '<div class="f-s-9">' + value + '</div>';
                        }
                        return result;
                    },
                    visible:"@ViewBag.Controller" != "UserPORequest",
                    sortable: false
                },
                {
                    render: function(data, type, row, meta) {
                        var result = '';
                        @*if ("@ViewBag.Controller" == "UserPORequest" && row.ContainsErrors == true) {
                            result = '<i class="fas fa-exclamation-triangle fa-2x text-red pull-right "></i>';
                            result += '<div class="text-sm-left text-red">' + row.ErrorMsg + '</div>'
                        }*@
                        return result;
                    },
                    visible: "@ViewBag.Controller" == "UserPORequest",
                    sortable: false
                },
            ],
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
            createdRow: function (row, data, dataIndex) {
                var rowKey = "poco=" + data.POCo + "&requestId=" + data.RequestId;
                $(row).attr('data-entitykey', rowKey);
            }
        });
    });
</script>