@model portal.Models.ReConfirmEmailViewModel


@{
    ViewBag.Title = "Resend Email Confirmation";
}
<div class="login login-with-news-feed">
    <!-- begin news-feed -->
    <div class="news-feed">
        <div class="news-image" style="background-image: url(../Content/images/Banner_02.jpg)"></div>
        <div class="news-caption">
            <h4 class="caption-title"><b>Hardrock</b> Portal</h4>
            <p>
                Welcome to the Hardrock Infrastructure Portal.
            </p>
        </div>
    </div>
    <!-- end news-feed -->
    <!-- begin right-content -->
    <div class="right-content">
        <!-- begin login-header -->
        <div class="login-header">
            <div class="brand">
                @ViewBag.Title
            </div>
        </div>
        <!-- end login-header -->
        <!-- begin login-content -->
        <div class="login-content">
            @using (Html.BeginForm("ResendConfirmationEmail", "Account", FormMethod.Post, new { @class = "margin-bottom-0", role="form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <input type="submit" value="Resend" class="btn btn-primary btn-block btn-lg" />
                <hr />
                <p class="text-center">
                    &copy; HardRock Infrastructure All Right Reserved @DateTime.Now.Year
                </p>
            }
        </div>
        <!-- end login-content -->
    </div>
    <!-- end right-container -->
</div>