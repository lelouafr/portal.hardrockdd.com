@model portal.Models.Views.DailyTicket.DailyWeeklyEntryListViewModel
@{
    var id = Guid.NewGuid().ToString().Replace("-", "");
}

<div class="panel panel-inverse" 
     data-sortable-id="DailyEmployeeListViewModel"
     data-initpane="initPane@(id)"
     data-reloadurl="@Url.Action("Table", "DailyWeeklyEntry", new { dtco = Model.DTCo, ticketId = Model.TicketId})">
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-url="@Url.Action("Panel","AuditLog")" data-click="panel-history" style="display:none"><i class="fas fa-history"></i></a>
            
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-success" data-click="panel-reload"><i class="fa fa-redo"></i></a>
            
        </div>
        <h4 class="panel-title">Weekly Entries</h4>
    </div>
    <div class="panel-body" id="DailyWeeklyEntryListViewModel">
        @Html.Partial("../DT/Type/Employee/Entry/List/Table", Model)
    </div>
</div>
<script>

    $(document).ready(function () {
        initPane@(id)();
    });

    function initPane@(id)() {
        handleEntryTypeChange();
        var table = $('#DailyWeeklyEntryListViewModel').find('table');
        $(table).find('tr').each(function () {
            handleEntryTypeView(this);
        });
    }

    function handleEntryTypeView(rowElem) {
        var entryType = $(rowElem).find('select.EntryTypeId').val();
        var jobSelect = $(rowElem).find('.selectJobId');
        var equipSelect = $(rowElem).find('.selectEquipmentId');
        var taskSelect = $(rowElem).find('.selectPhaseId');
        jobSelect.hide();
        equipSelect.hide();
        taskSelect.hide();
        //console.log(rowElem, entryType, jobSelect, equipSelect);

        switch (entryType) {
            case "@(((short)DB.EntryTypeEnum.Job))":
                equipSelect.hide();
                jobSelect.show();
                taskSelect.show();
                break;
            case "@(((short)DB.EntryTypeEnum.Equipment))":
                equipSelect.show();
                jobSelect.hide();
                break;
            case "@(((short)DB.EntryTypeEnum.Admin))":
                equipSelect.hide();
                jobSelect.hide();
                break;
            default:
                break;
        }
    }
    function handleEntryTypeChange() {
        $('#DailyWeeklyEntryListViewModel').on('change', '.EntryTypeId', function () {
            //console.log('EntryTypeId');
            var row = $(this).closest('tr');
            handleEntryTypeView(row);
        });
    }

</script>
