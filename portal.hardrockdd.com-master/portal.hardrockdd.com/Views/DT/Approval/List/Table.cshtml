@model List<portal.Models.Views.DailyTicket.DailyTicketApprovalViewModel>
@{
    ViewBag.TableRow = "True";
    var tableId = string.Format("table_{0}", Guid.NewGuid());
    var viewOnly = bool.TryParse(ViewBag.ViewOnly?.ToString(), out bool viewOnlyOut) ? viewOnlyOut : false;
    string tableKey = "";

}
@if (Model.Count != 0)
{
    <table class="table"
           id="@tableId"
           data-urlselect="@Url.Action("PartialIndex", "DailyTicketForm")"
           data-dstselect="ticketPanel"
           data-dstselectvalidate="true"
           data-tablekey="@tableKey">
        <thead>
            <tr>
                <th>@Html.LabelForRequired(model => model.FirstOrDefault().WorkDate)</th>
                <th class="hidden-xs hidden-sm">@Html.LabelForRequired(model => model.FirstOrDefault().FormName)</th>
                <th width="100px">@Html.LabelForRequired(model => model.FirstOrDefault().Description)</th>
                <th class="hidden-xs hidden-sm">@Html.LabelForRequired(model => model.FirstOrDefault().SupervisorUser)</th>
                @*<th>@Html.LabelForRequired(model => model.FirstOrDefault().Comments)</th>*@
                <th>@Html.LabelForRequired(model => model.FirstOrDefault().CreatedUser)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model.OrderBy(o => o.WorkDate).ThenBy(o => o.TicketId).ToList())
            {
                @Html.Partial("../DT/Approval/List/TableRow", ticket)
            }
        </tbody>
    </table>
}
<script>
    $(document).ready(function () {
        $('#@tableId').DataTable({
            autoWidth: false,
            fnInitComplete: function () {
                Table().init($('#@tableId'));
            },
        });


        $('#@tableId tbody').on('click', '.approveRow', function (e) {
            e.preventDefault();
            var url =  $(this).data("approvalurl");
            var row = $(this).closest('tr');
            var data = $(row).data("entitykey");
            var token = $(row).find('[name="__RequestVerificationToken"]');
            if (token.length != 0) {
                data += '&__RequestVerificationToken=' + token.val();
            }

            //console.log(url, data);
            var rowElem = $(this).closest('tr');
            $('.approveRow').prop('disabled', true);
            $(this).find('i').removeClass('fa').removeClass('fa-thumbs-up').addClass('fa').addClass('fa-spinner').addClass('fa-spin');
            var icon = $(this).find('i');
            var data = data;
            $.post(url, data, function (res) {
                if (res.success === "true") {
                    var btnGroup = $(rowElem).find('.btn-group');
                    $(btnGroup).remove();
                    $('.approveRow').prop('disabled', false);
                }
                else {
                    rowElem.click();
                    $('.approveRow').show();
                }
            });
        });
    });
</script>